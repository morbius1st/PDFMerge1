																 FallbackValue='false'}"
									Style="{StaticResource tbx.status}"
									/>
							<Label
									Content="Can Save"
									Style="{StaticResource lbl.status}"
									/>

							<TextBox
									IsReadOnly="True"
									Text="{Binding ItemCanSave,
																 Mode=OneWay,
																 FallbackValue='false'}"
									Style="{StaticResource tbx.status}"
									/>
							<Label
									Content="Has Changes"
									Style="{StaticResource lbl.status}"
									/>

							<TextBox
									IsReadOnly="True"
									Text="{Binding ItemHasChanges,
																 Mode=OneWay,
																 FallbackValue='false'}"
									Style="{StaticResource tbx.status}"
									/>
						</StackPanel>

						<StackPanel
								Margin="0,0,5,0"
								DockPanel.Dock="Bottom"
								Orientation="Horizontal"
								>

							<Label
									Content="Is Editing"
									Style="{StaticResource lbl.status}"
									/>

							<TextBox
									IsReadOnly="True"
									Text="{Binding IsEditing,
																 Mode=OneWay,
																 FallbackValue='false'}"
									Style="{StaticResource tbx.status}"
									/>

							<Label
									Content="Editing New"
									Style="{StaticResource lbl.status}"
									/>

							<TextBox
									IsReadOnly="True"
									Text="{Binding EditingNew,
																 Mode=OneWay,
																 FallbackValue='false'}"
									Style="{StaticResource tbx.status}"
									/>

							<Label
									Content="Editing Sel"
									Style="{StaticResource lbl.status}"
									/>

							<TextBox
									IsReadOnly="True"
									Text="{Binding EditingSelected,
																 Mode=OneWay,
																 FallbackValue='false'}"
									Style="{StaticResource tbx.status}"
									/>
						</StackPanel>




						<StackPanel
								Margin="0,0,5,0"
								DockPanel.Dock="Bottom"
								Orientation="Vertical"
								>
							<StackPanel Orientation="Horizontal">
								<Label
										Content="Selected Item"
										Style="{StaticResource lbl.status}"
										/>

								<Label
										Content="Index"
										Style="{StaticResource lbl.status}"
										/>

								<TextBox
										Width="50"
										IsReadOnly="True"
										Text="{Binding LbxSelectedIndex,
																	 Mode=TwoWay,
																	 FallbackValue='index'}"
										Style="{StaticResource tbx.status}"
										/>

								<Label
										Content="key"
										Style="{StaticResource lbl.status}"
										/>

								<TextBox
										Width="50"
										IsReadOnly="True"
										Text="{Binding LbxSelectedItem.DisciplineData.OrderCode,
																	 Mode=TwoWay,
																	 FallbackValue='key'}"
										Style="{StaticResource tbx.status}"
										/>

							</StackPanel>
							<TextBox
									IsReadOnly="True"
									Text="{Binding LbxSelectedItem.DisciplineData.Title,
																 Mode=TwoWay,
																 FallbackValue='title'}"
									Style="{StaticResource tbx.status}"
									/>

						</StackPanel>

						<DockPanel x:Name="DebugButtons"
								Margin="5"
								VerticalAlignment="Bottom"
								DockPanel.Dock="Bottom"
								>
							<StackPanel
									HorizontalAlignment="Left"
									VerticalAlignment="Bottom"
									DockPanel.Dock="Top"
									Orientation="Horizontal"
									>

								<Button x:Name="BtnClear1"
										Content="Clear 1"
										Margin="0,0,5,0"
										Width="{StaticResource BtnWidthNarrower}"
										Height="{StaticResource BtnHeight}"
										HorizontalAlignment="Right"
										VerticalAlignment="Bottom"
										Click="BtnClear1_OnClick"
										/>

								<Button x:Name="BtnShow1"
										Content="Show 1"
										Margin="0,0,5,0"
										Width="{StaticResource BtnWidthNarrower}"
										Height="{StaticResource BtnHeight}"
										HorizontalAlignment="Right"
										VerticalAlignment="Bottom"
										Click="BtnShow1_OnClick"
										/>

								<Button x:Name="BtnTest1"
										Content="Test 1"
										Margin="0,0,5,0"
										Width="{StaticResource BtnWidthNarrower}"
										Height="{StaticResource BtnHeight}"
										HorizontalAlignment="Right"
										VerticalAlignment="Bottom"
										Click="BtnTest1_OnClick"
										/>

								<Button
										Content="test 2"
										Margin="0,0,5,0"
										Width="{StaticResource BtnWidthNarrower}"
										Height="{StaticResource BtnHeight}"
										Style="{StaticResource btn.std.style}"
										Template="{StaticResource Button.Normal.ControlTemplate}"
										Click="BtnTest2_OnClick"
										/>

							</StackPanel>


						</DockPanel>



					</StackPanel>

				</DockPanel>

			</DockPanel>


			<DockPanel
					Grid.Column="1"
					Grid.Row="2"
					Margin="5"
					VerticalAlignment="Stretch"
					>

				<StackPanel
						DockPanel.Dock="Top"
						Orientation="Vertical"
						>
					<Label
							Content="{Binding FieldsTitle,
																FallbackValue='Title'}"
							Margin="0,0,0,2"
							Padding="4,0,0,2"
							Background="{StaticResource lbl.Bkg}"
							Foreground="White"
							/>

					<StackPanel Orientation="Horizontal">
						<Label
								Content="Locked?"
								Style="{StaticResource lbl.edit}"
								/>
						<Border
								Width="{StaticResource tbx.edit.width}"
								Height="17"
								Background="{StaticResource tbk.Bkg}"
								>
							<CheckBox
									Margin="3,0,0,0"
									Padding="0"
									VerticalAlignment="Center"
									IsChecked="{Binding ItemLocked}"
									/>
						</Border>

					</StackPanel>

					<StackPanel Orientation="Horizontal">
						<Label
								Content="Key"
								Style="{StaticResource lbl.edit}"
								/>

						<TextBox
								Text="{Binding ItemKey,
															 Mode=TwoWay,
															 FallbackValue='Key'}"
								Style="{StaticResource tbx.edit}"
								/>
					</StackPanel>

					<StackPanel Orientation="Horizontal">
						<Label
								Content="Disc Code"
								Style="{StaticResource lbl.edit}"
								/>

						<TextBox
								Text="{Binding ItemDisciplineCode,
															 Mode=TwoWay,
															 FallbackValue='Discipline code'}"
								Style="{StaticResource tbx.edit}"
								/>
					</StackPanel>

					<StackPanel Orientation="Horizontal">
						<Label
								Content="Title"
								Style="{StaticResource lbl.edit}"
								/>

						<TextBox
								Text="{Binding ItemTitle,
															 Mode=TwoWay,
															 FallbackValue='Title'}"
								Style="{StaticResource tbx.edit}"
								/>
					</StackPanel>

					<StackPanel Orientation="Horizontal">
						<Label
								Content="Display Name"
								Style="{StaticResource lbl.edit}"
								/>

						<TextBox
								Text="{Binding ItemDisplayName,
															 Mode=TwoWay,
															 FallbackValue='Display Name'}"
								Style="{StaticResource tbx.edit}"
								/>
					</StackPanel>

					<StackPanel Orientation="Horizontal">
						<Label
								Content="Description"
								Style="{StaticResource lbl.edit}"
								/>

						<TextBox
								Text="{Binding ItemDescription,
															 Mode=TwoWay,
															 FallbackValue='Description'}"
								Style="{StaticResource tbx.edit}"
								/>
					</StackPanel>
				</StackPanel>

				<StackPanel
						Margin="0,10,0,0"
						VerticalAlignment="top"
						DockPanel.Dock="top"
						Orientation="Vertical"
						>



					<StackPanel
							Margin="0,5,0,0"
							VerticalAlignment="Bottom"
							Orientation="Horizontal"
							DockPanel.Dock="Bottom"
							>

						<Button
								Content="New Item"
								Margin="0,0,5,0"
								Width="{StaticResource BtnWidth}"
								Height="{StaticResource BtnHeight}"
								IsEnabled="{Binding NewItem_Enabled}"
								Style="{StaticResource btn.std.style}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								Click="BtnNewItem_OnClick"
								/>

						<!--  <Button Content="Select Item"  -->
						<!--  Margin="0,0,5,0"  -->
						<!--  Width="{StaticResource BtnWidth}"  -->
						<!--  Height="{StaticResource BtnHeight}"  -->
						<!--  IsEnabled="{Binding SelectItem_Enabled}"  -->
						<!--  Style="{StaticResource Button.Normal.Style}"  -->
						<!--  Template="{StaticResource Button.Normal.ControlTemplate}"  -->
						<!--  Click="BtnSelectItem_OnClick"  -->
						<!--  />  -->

						<Button
								Content="Edit Item"
								Margin="0,0,5,0"
								Width="{StaticResource BtnWidth}"
								Height="{StaticResource BtnHeight}"
								IsEnabled="{Binding EditItem_Enabled}"
								Style="{StaticResource btn.std.style}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								Click="BtnEditItem_OnClick"
								/>

						<Button
								Content="Save Item"
								Margin="0,0,5,0"
								Width="{StaticResource BtnWidth}"
								Height="{StaticResource BtnHeight}"
								IsEnabled="{Binding SaveItem_Enabled}"
								Style="{StaticResource btn.std.style}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								Click="BtnSaveItem_OnClick"
								/>

						<Button
								Content="Remove Item"
								Margin="0,0,5,0"
								Width="{StaticResource BtnWidth}"
								Height="{StaticResource BtnHeight}"
								IsEnabled="{Binding RemoveItem_Enabled}"
								Style="{StaticResource btn.std.style}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								Click="BtnRemoveItem_OnClick"
								/>

						<Button
								Content="Done Editing"
								Margin="0,0,5,0"
								Width="{StaticResource BtnWidth}"
								Height="{StaticResource BtnHeight}"
								IsEnabled="{Binding DoneEditItem_Enabled}"
								Style="{StaticResource btn.std.style}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								Click="BtnDoneEditItem_OnClick"
								/>


					</StackPanel>

				</StackPanel>

				<StackPanel
						VerticalAlignment="Bottom"
						DockPanel.Dock="Bottom"
						Orientation="Vertical"
						>

					<Label
							Content="Data File Operations"
							Margin="0,0,0,2"
							Padding="4,0,0,2"
							Background="{StaticResource lbl.Bkg}"
							Foreground="White"
							/>


					<StackPanel
							Margin="0,0,5,0"
							Orientation="Horizontal"
							>
						<Label
								Content="File name"
								Style="{StaticResource lbl.status}"
								/>

						<TextBox
								IsReadOnly="True"
								Text="{Binding Dfm.DisciplineDataFileName,
															 Mode=OneWay,
															 FallbackValue='false'}"
								Style="{StaticResource tbx.status}"
								/>

						<Label
								Content="Exists"
								Style="{StaticResource lbl.status}"
								/>

						<TextBox
								IsReadOnly="True"
								Text="{Binding Dfm.DisciplineDataFileExists,
															 Mode=OneWay,
															 FallbackValue='false'}"
								Style="{StaticResource tbx.status}"
								/>

					</StackPanel>

					<StackPanel
							Margin="0,0,5,0"
							VerticalAlignment="Bottom"
							Orientation="Horizontal"
							>
						<Label
								Content="File path"
								Style="{StaticResource lbl.status}"
								/>

						<TextBox
								Width="Auto"
								IsReadOnly="True"
								Text="{Binding Dfm.DisciplineDataFilePathEllipsised,
															 Mode=OneWay,
															 FallbackValue='c:\\test\\test\\test\\test'}"
								Style="{StaticResource tbx.status}"
								/>

					</StackPanel>


					<StackPanel
							Margin="0,5,0,0"
							Orientation="Horizontal"
							>
						<Button
								Content="Open"
								Margin="0,0,5,0"
								Width="{StaticResource BtnWidthNarrower}"
								Height="{StaticResource BtnHeight}"
								IsEnabled="{Binding OpenColl_Enabled}"
								Style="{StaticResource btn.std.style}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								Click="BtnOpenColl_OnClick"
								/>
						<Button
								Content="New"
								Margin="0,0,5,0"
								Width="{StaticResource BtnWidthNarrower}"
								Height="{StaticResource BtnHeight}"
								IsEnabled="{Binding NewColl_Enabled}"
								Style="{StaticResource btn.std.style}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								Click="BtnNewColl_OnClick"
								/>
						<Button
								Content="Save"
								Margin="0,0,5,0"
								Width="{StaticResource BtnWidthNarrower}"
								Height="{StaticResource BtnHeight}"
								IsEnabled="{Binding SaveColl_Enabled}"
								Style="{StaticResource btn.std.style}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								Click="BtnSaveColl_OnClick"
								/>
						<Button
								Content="Save As"
								Margin="0,0,5,0"
								Width="{StaticResource BtnWidthNarrower}"
								Height="{StaticResource BtnHeight}"
								IsEnabled="{Binding SaveAsColl_Enabled}"
								Style="{StaticResource btn.std.style}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								Click="BtnSaveAsColl_OnClick"
								/>
						<Button
								Content="Close"
								Margin="0,0,5,0"
								Width="{StaticResource BtnWidthNarrower}"
								Height="{StaticResource BtnHeight}"
								IsEnabled="{Binding CloseColl_Enabled}"
								Style="{StaticResource btn.std.style}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								Click="BtnCloseColl_OnClick"
								/>
						<Button
								Content="Delete"
								Margin="0,0,5,0"
								Width="{StaticResource BtnWidthNarrower}"
								Height="{StaticResource BtnHeight}"
								IsEnabled="{Binding DeleteColl_Enabled}"
								Style="{StaticResource btn.std.style}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								Click="BtnDeleteColl_OnClick"
								/>
						<Button
								Content="Cancel"
								Margin="0,0,5,0"
								Width="{StaticResource BtnWidthNarrower}"
								Height="{StaticResource BtnHeight}"
								IsEnabled="{Binding CancelColl_Enabled}"
								Style="{StaticResource btn.std.style}"
								Template="{StaticResource Button.Normal.ControlTemplate}"
								Click="BtnCancelColl_OnClick"
								/>

					</StackPanel>

				</StackPanel>

			</DockPanel>

		</Grid>

	</Grid>
</Window>
