				<!--#endregion-->



				<!--#region > five-->
				<DockPanel
						Grid.Column="0"
						Grid.Row="4"
						Grid.ColumnSpan="2"
						Margin="15,0,0,10"
						HorizontalAlignment="Stretch"
						>
					<Border
							Margin="0,0,0,20"
							Width="65"
							Style="{StaticResource Border.Setting.Id}"
							>
						<Label
								Content="5"
								Margin="0,-4,0,0"
								VerticalAlignment="Top"
								Style="{StaticResource Label.Setting.Id}"
								/>

					</Border>

					<Grid
							Margin="15,0,0,0"
							VerticalAlignment="Top"
							>

						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="{StaticResource Grid.Settings.Col.Title}" MaxWidth="180" />
							<ColumnDefinition Width="{StaticResource Grid.Settings.Col.Control}" MaxWidth="30" />

							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<Grid.RowDefinitions>
							<RowDefinition Height="Auto" />
							<!-- <RowDefinition Height="{StaticResource Grid.Settings.Row.Typ}" /> -->
							<!-- <RowDefinition Height="{StaticResource Grid.Settings.Row.Typ}" /> -->
							<RowDefinition Height="*" />

						</Grid.RowDefinitions>

						<Label
								Content="Local Seed Files Configuration"
								Grid.Column="0"
								Grid.Row="0"
								Grid.ColumnSpan="3"
								Margin="0,0,0,3"
								Padding="5,0,0,3"
								HorizontalAlignment="Stretch"
								FontSize="{StaticResource Label.Section.Title.FontSize}"
								Background="{StaticResource Win.Title.Background}"
								Style="{StaticResource Label.Setting.Base}"
								/>

						<Border
								Grid.Column="0"
								Grid.Row="1"
								Grid.ColumnSpan="3"
								Margin="0,5,0,10"
								CornerRadius="5"
								Background="{StaticResource Details.Background}"
								>

							<StackPanel
									Margin="5,0,0,0"
									Orientation="Vertical"
									>
								<!--  IsEnabled="{Binding ElementName=mainWin,  -->
								<!--  FallbackValue=false,  -->
								<!--  Path=SeedInstalled.InstalledFolderExists}"  -->

								<StackPanel Orientation="Horizontal">

									<ToggleButton
											x:Name="LocalSeedFilesDetailsToggleButton"
											Width="15"
											Height="15"
											IsChecked="true"
											FocusVisualStyle="{x:Null}"
											Template="{StaticResource ToggleButton.Details}"
											>
									</ToggleButton>

									<Label
											Content="Local Seed File Configuration"
											Style="{StaticResource Label.Setting.Base}"
											/>

								</StackPanel>

								<!--#region > Details-->

								<Grid
										Margin="15,3,0,0"
										HorizontalAlignment="Stretch"
										>
									<Grid.Style>
										<Style TargetType="Grid">
											<Setter Property="Visibility" Value="Collapsed" />
											<Style.Triggers>
												<DataTrigger Binding="{Binding ElementName=LocalSeedFilesDetailsToggleButton, Path=IsChecked}" Value="True">
													<Setter Property="Visibility" Value="Visible" />
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</Grid.Style>

									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="{StaticResource Grid.Settings.Col.Title}" MaxWidth="180" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>

									<Grid.RowDefinitions>
										<!-- <RowDefinition Height="{StaticResource Grid.Settings.Row.Typ}" /> -->

										<RowDefinition Height="{StaticResource Grid.Settings.Row.Typ}" />
										<RowDefinition Height="*" />
									</Grid.RowDefinitions>


									<Label
											Content="Local Seed Folder Path"
											Grid.Column="0"
											Grid.Row="0"
											Style="{StaticResource Label.Setting.Base}"
											/>

									<Label
											Content="{Binding ElementName=mainWin,
																				FallbackValue='Undetermined',
																				Path=SeedLocal.LocalSeedFileFolder}"
											Grid.Column="1"
											Grid.Row="0"
											Style="{StaticResource Label.Setting.Found}"
											/>


									<!--  <Label  -->
									<!--  Content="Installed Seed File"  -->
									<!--  Grid.Column="0"  -->
									<!--  Grid.Row="0"  -->
									<!--  Padding="0"  -->
									<!--  Style="{StaticResource Label.Setting.Base}"  -->
									<!--  />  -->
									<StackPanel
											Grid.Column="0"
											Grid.Row="1"
											Grid.ColumnSpan="2"
											Margin="5,5,5,8"
											Orientation="Horizontal"
											>
										<Border
												x:Name="BdrDg5"
												Margin="0,5,5,8"
												HorizontalAlignment="Stretch"
												CornerRadius="5"
												Background="{StaticResource DataGrid.Background}"
												BorderThickness="1"
												BorderBrush="{StaticResource DataGrid.Background}"
												>

											<DataGrid
													x:Name="Dg5"
													Margin="5,3,5,3"
													Width="350"
													MinHeight="30"
													HorizontalAlignment="Stretch"
													HorizontalContentAlignment="Stretch"
													AutoGenerateColumns="false"
													CanUserAddRows="False"
													GridLinesVisibility="None"
													HeadersVisibility="Column"
													SelectionMode="Single"
													Background="Transparent"
													BorderThickness="0"
													HorizontalGridLinesBrush="Black"
													ItemsSource="{Binding ElementName=mainWin,
																								Path=SeedLocal.View}"
													>

												<DataGrid.ColumnHeaderStyle>
													<Style TargetType="DataGridColumnHeader">
														<Setter Property="Background" Value="Transparent" />
														<Setter Property="Foreground" Value="White" />
														<Setter Property="Margin" Value="5,0,0,3" />
														<Setter Property="BorderThickness" Value="0,0,0,1" />
														<Setter Property="BorderBrush" Value="Blue" />
														<Setter Property="HorizontalAlignment" Value="Stretch" />
														<Setter Property="HorizontalContentAlignment" Value="Stretch" />
													</Style>
												</DataGrid.ColumnHeaderStyle>

												<DataGrid.RowStyle>
													<Style TargetType="DataGridRow">
														<Setter Property="Background" Value="Transparent" />
														<Setter Property="HorizontalAlignment" Value="Stretch" />
														<Style.Triggers>
															<Trigger Property="IsSelected" Value="True">
																<Setter Property="Background" Value="#6687ceeb">
																</Setter>
															</Trigger>
														</Style.Triggers>
													</Style>
												</DataGrid.RowStyle>

												<DataGrid.Columns>

													<DataGridTemplateColumn
															Width="50"
															CellStyle="{StaticResource Dg1CellStyleBase}"
															>
														<DataGridTemplateColumn.HeaderTemplate>
															<DataTemplate>
																<Label
																		Content="Local"
																		Margin="0,0,0,-1.5"
																		Padding="4,0,4,2"
																		HorizontalAlignment="Center"
																		HorizontalContentAlignment="Center"
																		Foreground="White"
																		BorderThickness="0,0,0,2.5"
																		BorderBrush="Blue"
																		/>
															</DataTemplate>
														</DataGridTemplateColumn.HeaderTemplate>
														<DataGridTemplateColumn.CellTemplate>
															<DataTemplate DataType="{x:Type configSupport:ConfigSeedFileSetting}">
																<CheckBox
																		x:Name="ckbxLocal"
																		HorizontalAlignment="Center"
																		DataContext="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow},
																													Path=DataContext}"
																		IsChecked="{Binding Local,
																												Mode=OneWay}"
																		IsEnabled="False"
																		FocusVisualStyle="{x:Null}"
																		/>
															</DataTemplate>
														</DataGridTemplateColumn.CellTemplate>
													</DataGridTemplateColumn>

													<DataGridTextColumn
															Width="*"
															Binding="{Binding FileName,
																								Mode=OneWay,
																								FallbackValue='name'}"
															Header="File Name"
															CellStyle="{StaticResource Dg1CellStyleName}"
															>
														<DataGridTextColumn.HeaderTemplate>
															<DataTemplate>
																<Label
																		Content="File Name"
																		Margin="0,0,10,-1.5"
																		Padding="0,0,0,2"
																		HorizontalAlignment="Stretch"
																		HorizontalContentAlignment="Stretch"
																		Foreground="White"
																		BorderThickness="0,0,0,2.5"
																		BorderBrush="Blue"
																		/>
															</DataTemplate>
														</DataGridTextColumn.HeaderTemplate>
													</DataGridTextColumn>
												</DataGrid.Columns>

											</DataGrid>
										</Border>

									</StackPanel>
								</Grid>
							</StackPanel>
						</Border>
