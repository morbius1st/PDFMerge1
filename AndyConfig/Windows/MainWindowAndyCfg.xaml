		x:Name="MainWinAndyCfg"
		Title="MainWindowAndyCfg"
		Width="950"
		Height="850"
		Loaded="MainWindow_OnLoaded"
		mc:Ignorable="d"
		Background="{StaticResource Normal.Window.Background}"
