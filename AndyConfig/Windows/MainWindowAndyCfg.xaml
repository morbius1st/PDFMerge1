			<windows:BoolToMessage x:Key="BoolToMessage" />
			<windows:EnumToMessage x:Key="EnumToMessage" />
			<windows:NullStringToMessage x:Key="NullStrToMessage" />
			<!-- <local:BoolToString x:Key="BoolToString"/> -->

			<configSupport:SeedFileStatus x:Key="OK">OK_AS_IS</configSupport:SeedFileStatus>

			<sys:Double x:Key="Label.Section.Title.FontSize">16</sys:Double>
			<sys:Double x:Key="Label.Settings.Id.Size">65</sys:Double>

			<GridLength x:Key="Grid.Settings.Col.Id">80</GridLength>
			<GridLength x:Key="Grid.Settings.Col.Control">30</GridLength>
			<GridLength x:Key="Grid.Settings.Col.Title">180</GridLength>

			<GridLength x:Key="Grid.Settings.Row.Typ">24</GridLength>

			<SolidColorBrush x:Key="Label.Settings.Id" Color="{StaticResource Gray.800}" />
			<SolidColorBrush x:Key="Label.Foreground.Disabled" Color="{StaticResource Gray.600}" />

			<SolidColorBrush x:Key="Details.Background" Color="{StaticResource Blue.300}" />

			<SolidColorBrush x:Key="DataGrid.Background" Color="{StaticResource Blue.500}" />

			<SolidColorBrush x:Key="Button.Apply.Background" Color="{StaticResource Blue.500}" />

			<PathGeometry
					x:Key="Direction.Arrow.Geom"
					Figures="M 0,0 5,10 0,20 2,20 7,10 2,0  z"
					FillRule="EvenOdd"
					>
			</PathGeometry>

			<Style
					x:Key="Border.DetailBar"
					TargetType="Border"
					>
				<Setter Property="Margin" Value="5,5,0,0" />
				<Setter Property="Padding" Value="0,3,0,3" />
				<Setter Property="CornerRadius" Value="5" />

			</Style>

			<Style
					x:Key="Border.Setting.Id"
					TargetType="Border"
					>
				<Setter Property="Margin" Value="0,5,0,0" />
				<Setter Property="Width" Value="{StaticResource Label.Settings.Id.Size}" />
				<Setter Property="Height" Value="{StaticResource Label.Settings.Id.Size}" />
				<Setter Property="Padding" Value="0" />
				<Setter Property="HorizontalAlignment" Value="Center" />
				<Setter Property="VerticalAlignment" Value="Top" />
				<Setter Property="CornerRadius" Value="4" />
				<Setter Property="Background" Value="DimGray" />
			</Style>

			<Style
					x:Key="Label.Base"
					TargetType="Label"
					>
				<Setter Property="Padding" Value="0" />
				<Setter Property="Margin" Value="0" />
				<Setter Property="Foreground" Value="White" />
				<Style.Triggers>
					<Trigger Property="IsEnabled" Value="False">
						<Setter Property="Foreground" Value="{StaticResource Label.Foreground.Disabled}" />
					</Trigger>
				</Style.Triggers>
			</Style>

			<Style
					x:Key="Label.Setting.Id"
					TargetType="Label"
					BasedOn="{StaticResource Label.Base}"
					>
				<Setter Property="HorizontalAlignment" Value="Center" />
				<Setter Property="VerticalAlignment" Value="Center" />
				<Setter Property="FontSize" Value="48" />
				<Setter Property="FontWeight" Value="Bold" />
				<Setter Property="Foreground" Value="{StaticResource Label.Settings.Id}" />

			</Style>

			<Style
					x:Key="Label.Setting.Base"
					TargetType="Label"
					BasedOn="{StaticResource Label.Base}"
					>
				<Setter Property="HorizontalAlignment" Value="Left" />
				<Setter Property="VerticalAlignment" Value="Center" />
				<Setter Property="Padding" Value="5,0,0,2" />
				<!-- <Style.Triggers> -->
				<!-- 	<Trigger Property="IsEnabled" Value="False"> -->
				<!-- 		<Setter Property="Foreground" Value="{StaticResource Label.Foreground.Disabled}"> -->
				<!--    -->
				<!-- 		</Setter> -->
				<!-- 	</Trigger> -->
				<!-- </Style.Triggers> -->
			</Style>


			<Style
					x:Key="Label.Setting.Found"
					TargetType="Label"
					BasedOn="{StaticResource Label.Setting.Base}"
					>
				<Style.Triggers>
					<Trigger Property="Content" Value="False">
						<Setter Property="Foreground" Value="{StaticResource Label.Foreground.Disabled}">
						</Setter>
					</Trigger>
				</Style.Triggers>

			</Style>


			<Style
					x:Key="Dg1CellStyleBase"
					TargetType="DataGridCell"
					>
				<Setter Property="Background" Value="Transparent" />
				<Setter Property="Foreground" Value="White" />
				<Setter Property="HorizontalAlignment" Value="Stretch" />
				<Setter Property="HorizontalContentAlignment" Value="Center" />
				<Setter Property="VerticalAlignment" Value="Center" />
				<Setter Property="VerticalContentAlignment" Value="Center" />
				<Setter Property="Template" Value="{DynamicResource Dg1CellTemplate1}" />
				<Setter Property="Margin" Value="8,0,8,3" />
				<Setter Property="Padding" Value="0,0,0,0" />
				<Setter Property="FocusVisualStyle" Value="{x:Null}" />
			</Style>

			<Style
					x:Key="Dg1CellStyleName"
					TargetType="DataGridCell"
					BasedOn="{StaticResource Dg1CellStyleBase}"
					>
				<Setter Property="HorizontalContentAlignment" Value="Left" />
				<Setter Property="Margin" Value="8,0,8,3" />
				<Setter Property="Padding" Value="0,0,0,0" />
			</Style>

			<Style
					x:Key="Dg1CellStyleFound"
					TargetType="DataGridCell"
					BasedOn="{StaticResource Dg1CellStyleBase}"
					>
				<Setter Property="HorizontalAlignment" Value="Center" />
			</Style>

			<Style
					x:Key="Dg1ColHdrStyle"
					TargetType="DataGridColumnHeader"
					>
				<Setter Property="Background" Value="Transparent" />
				<Setter Property="Foreground" Value="White" />
				<Setter Property="Margin" Value="5,0,0,3" />
				<Setter Property="Padding" Value="0,0,0,0" />
				<Setter Property="BorderThickness" Value="0,0,0,1" />
				<Setter Property="BorderBrush" Value="Blue" />
				<Setter Property="HorizontalAlignment" Value="Stretch" />
				<Setter Property="HorizontalContentAlignment" Value="Stretch" />
			</Style>


			<Style
					x:Key="TextBlock.In.Button"
					TargetType="TextBlock"
					>
				<Setter Property="Foreground" Value="White" />
				<Style.Triggers>
					<Trigger Property="IsEnabled" Value="False">
						<Setter Property="Foreground" Value="{StaticResource Normal.Disabled.Foreground}" />
					</Trigger>
				</Style.Triggers>
			</Style>

			<ControlTemplate
					x:Key="Dg1CellTemplate1"
					TargetType="DataGridCell"
					>
				<Border
						x:Name="Bd"
						SnapsToDevicePixels="True"
						Background="{TemplateBinding Background}"
						BorderThickness="{TemplateBinding BorderThickness}"
						BorderBrush="{TemplateBinding BorderBrush}"
						>
					<ContentPresenter
							Content="{TemplateBinding Content}"
							ContentStringFormat="{TemplateBinding ContentStringFormat}"
							SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
							ContentTemplate="{TemplateBinding ContentTemplate}"
							/>
				</Border>
				<ControlTemplate.Triggers>
					<DataTrigger Binding="{Binding IsKeyboardFocused, RelativeSource={RelativeSource Self}}" Value=" true">
						<Setter TargetName="Bd" Property="BorderBrush" Value="Transparent" />
						<Setter TargetName="Bd" Property="BorderThickness" Value="1" />
					</DataTrigger>
					<DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGridRow}}, Path=IsSelected}" Value="true">
						<Setter Property="BorderThickness" Value="1" />
						<Setter TargetName="Bd" Property="BorderBrush" Value="Transparent" />
					</DataTrigger>
					<!-- </ControlTemplate.Triggers> -->
