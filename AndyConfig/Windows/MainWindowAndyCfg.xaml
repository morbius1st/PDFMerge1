		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="ResourceFiles/XamlResources/Andy.xaml" />
				<ResourceDictionary Source="/../AndyResources/SVG/File-Open-00.xaml" />
			</ResourceDictionary.MergedDictionaries>
