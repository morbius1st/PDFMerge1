<Window Name="mainWin" Title="MainWindow"
		x:Class="Tests2.Windows.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:filelist="clr-namespace:Tests2.FileListManager"
		xmlns:local="clr-namespace:Tests2.Windows"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		Width="1200"
		Height="650"
		DataContext="{Binding ElementName=mainWin}"
		Loaded="MainWin_Loaded"
		mc:Ignorable="d"
		Background="#444444"
		>
	<Window.Resources>

		<x:Static x:Key="flx"
				Member="local:MainWindow.flx"
				/>

		<x:Static x:Key="flst" Member="filelist:FileItem.RootPath"/>

		<Style x:Key="lblRoute"
				TargetType="Label"
				>
			<Setter Property="FontSize" Value="10" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="Margin" Value="0" />
			<Setter Property="Padding" Value="0" />
		</Style>

		<Style x:Key="lblRouteTitle"
				TargetType="Label"
				BasedOn="{StaticResource lblRoute}"
				>
			<Setter Property="Width" Value="70" />
		</Style>

		<Style x:Key="lblRouteSettingValue"
				TargetType="Label"
				BasedOn="{StaticResource lblRoute}"
				>
			<Setter Property="HorizontalAlignment" Value="Left" />
		</Style>

		<Style x:Key="lblRoutePathValue"
				TargetType="Label"
				BasedOn="{StaticResource lblRoute}"
				>
			<Setter Property="HorizontalAlignment" Value="Stretch" />

		</Style>

		<Style x:Key="stackPath"
				TargetType="StackPanel"
				>
			<Setter Property="HorizontalAlignment" Value="Left" />
			<Setter Property="Orientation" Value="Vertical" />
		</Style>


		<Style x:Key="stackHorizPath"
				TargetType="StackPanel"
				>
			<Setter Property="HorizontalAlignment" Value="Left" />
			<Setter Property="Margin" Value="0,0,10,0" />
			<Setter Property="Orientation" Value="Horizontal" />
		</Style>

		<Style x:Key="stackSetting"
				TargetType="StackPanel"
				>
			<Setter Property="HorizontalAlignment" Value="Left" />
			<Setter Property="Orientation" Value="Vertical" />
			<Setter Property="Width" Value="140" />
		</Style>

		<Style x:Key="stackHorizSetting"
				TargetType="StackPanel"
				>
			<Setter Property="HorizontalAlignment" Value="Left" />
			<Setter Property="Orientation" Value="Horizontal" />
			<Setter Property="Margin" Value="3,0,0,0"/>
		</Style>

		<Style x:Key="lblList"
				TargetType="Label"
				>
			<Setter Property="HorizontalAlignment" Value="Left"></Setter>
			<Setter Property="Foreground" Value="White" />
			<Setter Property="Padding" Value="3,2,10,5" />
		</Style>

		<Style x:Key="lblTitle"
				TargetType="Label"
				BasedOn="{StaticResource lblList}"
				>
			<Setter Property="Width" Value="100" />
		</Style>

		<Style x:Key="lblPathValue"
				TargetType="Label"
				BasedOn="{StaticResource lblList}"
				>
			<Setter Property="Width" Value="400" />
		</Style>




	</Window.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="250" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="90" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="38" />
		</Grid.RowDefinitions>

		<Button x:Name="btnDone" Content="Done"
				Grid.Column="2"
				Grid.Row="2"
				Margin="0,5,5,5"
				Width="80"
				HorizontalAlignment="Right"
				VerticalAlignment="Stretch"
				Click="BtnDone_OnClick"
				/>

		<Button x:Name="btnDebug" Content="Debug"
				Grid.Column="1"
				Grid.Row="2"
				Margin="0,5,5,5"
				Width="80"
				HorizontalAlignment="Right"
				VerticalAlignment="Stretch"
				Click="BtnDebug_OnClick"
				/>
		<TextBox x:Name="tbkUL"
				Grid.Column="0"
				Grid.Row="0"
				Margin="3,20,0,0"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				HorizontalScrollBarVisibility="Visible"
				Text="TextBlock"
				TextWrapping="NoWrap"
				Background="#555555"
				Foreground="White"
				/>
		<Label x:Name="label" Content="Information"
				Grid.Column="0"
				Grid.Row="0"
				Margin="3,3,0,0"
				Width="90"
				Padding="0"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Foreground="White"
				/>

		<ListView x:Name="lv01"
				Grid.Column="1"
				Grid.Row="0"
				Grid.RowSpan="2"
				Margin="3,20,0,150"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				
				ScrollViewer.CanContentScroll="False"
				d:DataContext="{Binding Source={StaticResource flx},
																Mode=OneWay,
																Path=fileItems2}"
				DataContext="{Binding ElementName=mainWin,
															Mode=OneWay,
															Path=filLst.Vue}"
				Background="#444444"
				Foreground="White"
				ItemTemplate="{DynamicResource lv01DataTemplate}"
				ItemsSource="{Binding}"
				>
			<ListView.Resources>
				<DataTemplate x:Key="lv01DataTemplate"
						DataType="filelist:FileItem"
						>
					<Border
							BorderThickness="3"
							BorderBrush="SpringGreen"
							>
						<StackPanel Orientation="Vertical">
							<Label Style="{StaticResource lblTitle}"
									Padding="3,0,0,0"
									Content="A File Item"
									/>

							<StackPanel Orientation="Horizontal"
									
									Margin="12,0,0,4"
									>

								<StackPanel Style="{StaticResource stackSetting}">
									<StackPanel Style="{StaticResource stackHorizSetting}">
										<Label Content="IsFile"
												Style="{StaticResource lblRouteTitle}" />
										<Label Content="{Binding IsFile}"
												Style="{StaticResource lblRouteSettingValue}" />
									</StackPanel>
									<StackPanel Style="{StaticResource stackHorizSetting}">
										<Label Content="outline depth"
												Style="{StaticResource lblRouteTitle}" />
										<Label Content="{Binding OutlineDepth}"
												Style="{StaticResource lblRouteSettingValue}" />
									</StackPanel>

								</StackPanel>

								<StackPanel Orientation="Vertical">
									<StackPanel Style="{StaticResource stackHorizSetting}">
										<Label Content="Root path"
												Style="{StaticResource lblRouteTitle}" />
										<Label Content="{Binding RootPath.FullPath}"
												Style="{StaticResource lblRouteSettingValue}" />
									</StackPanel>
		
								</StackPanel>
							</StackPanel>



							<Border Margin="4,0,2,4"
									BorderThickness="1"
									BorderBrush="Blue"
									>
								<StackPanel Orientation="Vertical">

									<StackPanel Orientation="Horizontal">
										<Label Content="complete path"
												Style="{StaticResource lblTitle}"
												/>
										<Label Content="{Binding FilePath.FullPath}"
												Width="Auto"
												Style="{StaticResource lblPathValue}"
												/>
									</StackPanel>

									<StackPanel
											Margin="10,0,0,5"
											HorizontalAlignment="Left"
											Orientation="Horizontal"
											>

										<StackPanel Style="{StaticResource stackSetting}">

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label Content="IsValid"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding FilePath.IsValid}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label Content="Route Type"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding FilePath.RouteType}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label Content="Depth"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding FilePath.Depth}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

										</StackPanel>

										<StackPanel Style="{StaticResource stackPath}">

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label Content="Path"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding FilePath.Path}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label Content="Root Path"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding FilePath.RootPath}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label Content="Folders"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding FilePath.Folders}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label Content="FileName"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding FilePath.FileName}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>
										</StackPanel>

									</StackPanel>
								</StackPanel>
							</Border>

						<Border
								Margin="4,0,4,4"
									BorderThickness="1"
									BorderBrush="DodgerBlue"
									>
								<StackPanel Orientation="Vertical">

									<StackPanel Orientation="Horizontal">
										<Label Content="outline path"
												Style="{StaticResource lblTitle}"
												/>
										<Label Content="{Binding OutlinePath.FullPath}"
												Width="Auto"
												Style="{StaticResource lblPathValue}"
												/>
									</StackPanel>

									<StackPanel
											Margin="10,0,0,5"
											HorizontalAlignment="Left"
											Orientation="Horizontal"
											>

										<StackPanel Style="{StaticResource stackSetting}">

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label Content="IsValid"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding OutlinePath.IsValid}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label Content="Route Type"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding OutlinePath.RouteType}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label Content="Depth"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding OutlinePath.Depth}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

										</StackPanel>

										<StackPanel Style="{StaticResource stackPath}">

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label Content="Path"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding OutlinePath.Path}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label Content="Root Path"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding OutlinePath.RootPath}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label Content="Folders"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding OutlinePath.Folders}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label Content="FileName"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding OutlinePath.FileName}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>
										</StackPanel>

									</StackPanel>
								</StackPanel>
							</Border>

							
						<Border
								Margin="4,0,4,4"
									BorderThickness="1"
									BorderBrush="DeepSkyBlue"
									>
								<StackPanel Orientation="Vertical">

									<StackPanel Orientation="Horizontal">
										<Label Content="sub path"
												Style="{StaticResource lblTitle}"
												/>
										<Label Content="{Binding SubPath.FullPath}"
												Width="Auto"
												Style="{StaticResource lblPathValue}"
												/>
									</StackPanel>

									<StackPanel
											Margin="10,0,0,5"
											HorizontalAlignment="Left"
											Orientation="Horizontal"
											>

										<StackPanel Style="{StaticResource stackSetting}">

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label Content="IsValid"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding SubPath.IsValid}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label Content="Route Type"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding SubPath.RouteType}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label Content="Depth"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding SubPath.Depth}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

										</StackPanel>

										<StackPanel Style="{StaticResource stackPath}">

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label Content="Path"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding SubPath.Path}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label Content="Root Path"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding SubPath.RootPath}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label Content="Folders"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding SubPath.Folders}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label Content="FileName"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label Content="{Binding SubPath.FileName}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>
										</StackPanel>

									</StackPanel>
								</StackPanel>
							</Border>

							</StackPanel>
					</Border>
				</DataTemplate>
			</ListView.Resources>
		</ListView>

