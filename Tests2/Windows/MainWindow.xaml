<Window Name="mainWin"
		x:Class="Tests2.Windows.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:filelist="clr-namespace:Tests2.FileListManager"
		xmlns:local="clr-namespace:Tests2.Windows"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:pdf="clr-namespace:Tests2.PDFMergeManager"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		Title="MainWindow"
		Width="1400"
		Height="900"
		DataContext="{Binding ElementName=mainWin}"
		mc:Ignorable="d"
		Background="#444444"
		Loaded="MainWin_Loaded"
		>
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="MainWinSupport/WinTreeStyle.xaml" />
				<ResourceDictionary Source="MainWinSupport/ExpandCollapseToggleStyle.xaml" />

			</ResourceDictionary.MergedDictionaries>

			<x:Static x:Key="flx"
					Member="local:MainWindow.flx"
					/>

			<x:Static x:Key="flst"
					Member="filelist:FileItem.RootPath"
					/>

			<Style x:Key="lblRoute"
					TargetType="Label"
					>
				<Setter Property="FontSize" Value="10" />
				<Setter Property="Foreground" Value="White" />
				<Setter Property="Margin" Value="0" />
				<Setter Property="Padding" Value="0" />
			</Style>

			<Style x:Key="lblRouteTitle"
					TargetType="Label"
					BasedOn="{StaticResource lblRoute}"
					>
				<Setter Property="Width" Value="70" />
			</Style>

			<Style x:Key="lblRouteSettingValue"
					TargetType="Label"
					BasedOn="{StaticResource lblRoute}"
					>
				<Setter Property="HorizontalAlignment" Value="Left" />
			</Style>

			<Style x:Key="lblRoutePathValue"
					TargetType="Label"
					BasedOn="{StaticResource lblRoute}"
					>
				<Setter Property="HorizontalAlignment" Value="Stretch" />

			</Style>

			<Style x:Key="stackPath"
					TargetType="StackPanel"
					>
				<Setter Property="HorizontalAlignment" Value="Left" />
				<Setter Property="Orientation" Value="Vertical" />
			</Style>


			<Style x:Key="stackHorizPath"
					TargetType="StackPanel"
					>
				<Setter Property="HorizontalAlignment" Value="Left" />
				<Setter Property="Margin" Value="0,0,10,0" />
				<Setter Property="Orientation" Value="Horizontal" />
			</Style>

			<Style x:Key="stackSetting"
					TargetType="StackPanel"
					>
				<Setter Property="HorizontalAlignment" Value="Left" />
				<Setter Property="Orientation" Value="Vertical" />
				<Setter Property="Width" Value="140" />
			</Style>

			<Style x:Key="stackHorizSetting"
					TargetType="StackPanel"
					>
				<Setter Property="HorizontalAlignment" Value="Left" />
				<Setter Property="Margin" Value="3,0,0,0" />
				<Setter Property="Orientation" Value="Horizontal" />
			</Style>

			<Style x:Key="lblList"
					TargetType="Label"
					>
				<Setter Property="Foreground" Value="White" />
				<Setter Property="HorizontalAlignment" Value="Left" />
				<Setter Property="Padding" Value="3,2,10,5" />
			</Style>

			<Style x:Key="lblTitle"
					TargetType="Label"
					BasedOn="{StaticResource lblList}"
					>
				<Setter Property="Width" Value="100" />
			</Style>

			<Style x:Key="lblPathValue"
					TargetType="Label"
					BasedOn="{StaticResource lblList}"
					>
				<Setter Property="Width" Value="400" />
			</Style>

			<Style x:Key="Style"
					TargetType="TreeViewItem"
					>
				<Setter Property="Foreground" Value="Red" />
			</Style>


			<Style x:Key="ListViewItemStyle1"
					TargetType="{x:Type ListViewItem}"
					>
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type ListViewItem}">
							<Grid />
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
			<SolidColorBrush x:Key="ListBox.Static.Background" Color="#FFFFFFFF" />
			<SolidColorBrush x:Key="ListBox.Static.Border" Color="#FFABADB3" />
			<SolidColorBrush x:Key="ListBox.Disabled.Background" Color="#FFFFFFFF" />
			<SolidColorBrush x:Key="ListBox.Disabled.Border" Color="#FFD9D9D9" />


			<Style x:Key="Lv02ItemStyle2"
					TargetType="{x:Type ListViewItem}"
					>
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type ListViewItem}">
							<Border x:Name="BorderA">
								<ContentPresenter />
								<Border.Triggers>

									<!--  padding for gap when mouse hovers element  -->
									<EventTrigger
											RoutedEvent="DragEnter"
											SourceName="BorderA"
											>
										<BeginStoryboard>
											<Storyboard>
												<ThicknessAnimation
														Storyboard.TargetProperty="Padding"
														From="0,0,0,0"
														To="0,25,0,0"
														Duration="0:0:0.5"
														AutoReverse="False"
														BeginTime="0:0:0"
														/>
											</Storyboard>
										</BeginStoryboard>
									</EventTrigger>

									<!--  back to normal padding  -->
									<EventTrigger
											RoutedEvent="DragLeave"
											SourceName="BorderA"
											>
										<BeginStoryboard>
											<Storyboard>
												<ThicknessAnimation
														Storyboard.TargetProperty="Padding"
														From="0,25,0,0"
														To="0,0,0,0"
														Duration="0:0:0.5"
														AutoReverse="False"
														BeginTime="0:0:0"
														/>
											</Storyboard>
										</BeginStoryboard>
									</EventTrigger>

								</Border.Triggers>
							</Border>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>




		</ResourceDictionary>
	</Window.Resources>


	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="600" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="90" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="38" />
		</Grid.RowDefinitions>

		<StackPanel
				Grid.Column="2"
				Grid.Row="0"
				Grid.RowSpan="3"
				VerticalAlignment="Bottom"
				Orientation="Vertical"
				>

			<Button x:Name="btnRename"
					Content="Rename"
					Margin="5"
					Width="80"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Click="BtnRename_OnClick"
					/>

			<Button x:Name="btnRemove"
					Content="Remove ...-001"
					Margin="5"
					Width="80"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Click="BtnRemove_OnClick"
					/>

			<Button x:Name="btnFilter"
					Content="Filter by ...-001"
					Grid.Column="1"
					Margin="5"
					Width="80"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Click="BtnFilter_OnClick"
					/>

			<Button x:Name="btnTest"
					Content="Test"
					Margin="5"
					Width="80"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Click="BtnTest_OnClick"
					/>

			<Button x:Name="btnDebug"
					Content="Debug"
					Margin="5"
					Width="80"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Click="BtnDebug_OnClick"
					/>

			<Button x:Name="btnDone"
					Content="Done"
					Margin="5"
					Width="80"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					Click="BtnDone_OnClick"
					/>

		</StackPanel>

		<TextBox
				Grid.Column="1"
				Grid.Row="2"
				Margin="5"
				x:Name="TbxResult"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				Background="#555555"
				Foreground="White"
				Text="{Binding ElementName=mainWin, Path=TestName}"
				TextWrapping="NoWrap"
		/>

		<TextBox x:Name="tbkUL"
				Grid.Column="0"
				Grid.Row="0"
				Margin="3,20,0,0"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				Background="#555555"
				Foreground="White"
				HorizontalScrollBarVisibility="Visible"
				Text="TextBlock"
				TextWrapping="NoWrap"
				VerticalScrollBarVisibility="Visible"
				/>
		<Label x:Name="label"
				Content="Information"
				Grid.Column="0"
				Grid.Row="0"
				Margin="3,3,0,0"
				Width="90"
				Padding="0"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Foreground="White"
				/>

		<ListView x:Name="lv01"
				Grid.Column="1"
				Grid.Row="0"
				Margin="3,20,0,0"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				DataContext="{Binding ElementName=mainWin,
															Mode=OneWay,
															Path=FileList}"
				d:DataContext="{Binding Source={StaticResource flx},
																Mode=OneWay,
																Path=fileItems2}"
				Background="#444444"
				Foreground="White"
				ScrollViewer.CanContentScroll="False"
				ItemTemplate="{DynamicResource lv01DataTemplate}"
				ItemsSource="{Binding}"
				>
			<ListView.Resources>
				<DataTemplate x:Key="lv01DataTemplate"
						DataType="filelist:FileItem"
						>
					<Border
							BorderThickness="3"
							BorderBrush="SpringGreen"
							>
						<StackPanel x:Name="Panel1"
								Orientation="Vertical"
								>
							<Label
									Content="A File Item"
									Padding="3,0,0,0"
									Style="{StaticResource lblTitle}"
									/>

							<StackPanel
									Margin="12,0,0,4"
									Orientation="Horizontal"
									>
								<StackPanel Style="{StaticResource stackSetting}">
									<StackPanel Style="{StaticResource stackHorizSetting}">
										<Label
												Content="IsFile"
												Style="{StaticResource lblRouteTitle}"
												/>
										<Label
												Content="{Binding IsFile}"
												Style="{StaticResource lblRouteSettingValue}"
												/>
									</StackPanel>
									<StackPanel Style="{StaticResource stackHorizSetting}">
										<Label
												Content="outline depth"
												Style="{StaticResource lblRouteTitle}"
												/>
										<Label
												Content="{Binding OutlinePathDepth}"
												Style="{StaticResource lblRouteSettingValue}"
												/>
									</StackPanel>
								</StackPanel>

								<StackPanel Orientation="Vertical">
									<StackPanel Style="{StaticResource stackHorizSetting}">
										<Label
												Content="Root path"
												Style="{StaticResource lblRouteTitle}"
												/>
										<Label
												Content="{Binding RootPath.FullPath}"
												Style="{StaticResource lblRouteSettingValue}"
												/>
									</StackPanel>
									<StackPanel Style="{StaticResource stackHorizSetting}">
										<Label
												Content="Seq Code"
												Style="{StaticResource lblRouteTitle}"
												/>
										<Label
												Content="{Binding SequenceCode}"
												Style="{StaticResource lblRouteSettingValue}"
												/>
									</StackPanel>
								</StackPanel>
							</StackPanel>

							<Border
									Margin="4,0,2,4"
									BorderThickness="1"
									BorderBrush="Blue"
									>
								<StackPanel Orientation="Vertical">

									<StackPanel Orientation="Horizontal">
										<Label
												Content="complete path"
												Style="{StaticResource lblTitle}"
												/>
										<Label
												Content="{Binding FilePath.FullPath}"
												Width="Auto"
												Style="{StaticResource lblPathValue}"
												/>
									</StackPanel>

									<StackPanel
											Margin="10,0,0,5"
											HorizontalAlignment="Left"
											Orientation="Horizontal"
											>

										<StackPanel Style="{StaticResource stackSetting}">

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label
														Content="IsValid"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding FilePath.IsValid}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label
														Content="Route Type"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding FilePath.RouteType}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label
														Content="Depth"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding FilePath.Depth}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

										</StackPanel>

										<StackPanel Style="{StaticResource stackPath}">

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label
														Content="Path"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding FilePath.Path}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label
														Content="Root Path"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding FilePath.RootPath}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label
														Content="Folders"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding FilePath.Folders}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label
														Content="FileName"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding FilePath.FileName}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>
										</StackPanel>

									</StackPanel>
								</StackPanel>
							</Border>

							<Border
									Margin="4,0,4,4"
									BorderThickness="1"
									BorderBrush="DodgerBlue"
									>
								<StackPanel Orientation="Vertical">

									<StackPanel Orientation="Horizontal">
										<Label
												Content="outline path"
												Style="{StaticResource lblTitle}"
												/>
										<Label
												Content="{Binding OutlinePath.FullPath}"
												Width="Auto"
												Style="{StaticResource lblPathValue}"
												/>
									</StackPanel>

									<StackPanel
											Margin="10,0,0,5"
											HorizontalAlignment="Left"
											Orientation="Horizontal"
											>

										<StackPanel Style="{StaticResource stackSetting}">

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label
														Content="IsValid"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding OutlinePath.IsValid}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label
														Content="IsRooted"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding OutlinePath.IsRooted}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label
														Content="Route Type"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding OutlinePath.RouteType}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label
														Content="Depth"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding OutlinePath.Depth}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

										</StackPanel>

										<StackPanel Style="{StaticResource stackPath}">

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label
														Content="Path"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding OutlinePath.Path}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label
														Content="Root Path"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding OutlinePath.RootPath}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label
														Content="Folders"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding OutlinePath.Folders}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label
														Content="FileName"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding OutlinePath.FileName}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>
										</StackPanel>

									</StackPanel>
								</StackPanel>
							</Border>

							<Border
									Margin="4,0,4,4"
									BorderThickness="1"
									BorderBrush="DeepSkyBlue"
									>
								<StackPanel Orientation="Vertical">

									<StackPanel Orientation="Horizontal">
										<Label
												Content="sub path"
												Style="{StaticResource lblTitle}"
												/>
										<Label
												Content="{Binding SubPath.FullPath}"
												Width="Auto"
												Style="{StaticResource lblPathValue}"
												/>
									</StackPanel>

									<StackPanel
											Margin="10,0,0,5"
											HorizontalAlignment="Left"
											Orientation="Horizontal"
											>

										<StackPanel Style="{StaticResource stackSetting}">

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label
														Content="IsValid"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding SubPath.IsValid}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label
														Content="Route Type"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding SubPath.RouteType}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizSetting}">
												<Label
														Content="Depth"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding SubPath.Depth}"
														Style="{StaticResource lblRouteSettingValue}"
														/>
											</StackPanel>

										</StackPanel>

										<StackPanel Style="{StaticResource stackPath}">

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label
														Content="Path"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding SubPath.Path}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label
														Content="Root Path"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding SubPath.RootPath}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label
														Content="Folders"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding SubPath.Folders}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>

											<StackPanel Style="{StaticResource stackHorizPath}">
												<Label
														Content="FileName"
														Style="{StaticResource lblRouteTitle}"
														/>
												<Label
														Content="{Binding SubPath.FileName}"
														Style="{StaticResource lblRoutePathValue}"
														/>
											</StackPanel>
										</StackPanel>

									</StackPanel>
								</StackPanel>
							</Border>

						</StackPanel>

					</Border>
				</DataTemplate>
			</ListView.Resources>
		</ListView>

		<DockPanel
				Grid.Column="1"
				Grid.Row="1"
				>

			<ListView x:Name="lv02"
					Margin="3,20,0,0"
					Height="200"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					DataContext="{Binding FileList,
																ElementName=mainWin,
																Mode=OneWay}"
					d:DataContext="{Binding Source={StaticResource flx},
																	Mode=OneWay,
																	Path=fileItems2}"
					Background="#444444"
					Foreground="White"
					DockPanel.Dock="Top"
					ScrollViewer.CanContentScroll="False"
					ItemContainerStyle="{DynamicResource Lv02ItemStyle2}"
					ItemTemplate="{DynamicResource lv01DataTemplate}"
					ItemsSource="{Binding}"
					>

				<ListView.Resources>
					<DataTemplate x:Key="lv01DataTemplate"
							DataType="filelist:FileItem"
							>
						<Border
								BorderThickness="3"
								BorderBrush="SpringGreen"
								>
							<StackPanel Orientation="Vertical">

								<StackPanel Orientation="Horizontal">
									<Label
											Content="sort Code"
											Style="{StaticResource lblTitle}"
											/>
									<Label
											Content="{Binding SortCode}"
											Width="Auto"
											Style="{StaticResource lblPathValue}"
											/>
								</StackPanel>

								<StackPanel Orientation="Horizontal">
									<Label
											Content="complete path"
											Style="{StaticResource lblTitle}"
											/>
									<Label
											Content="{Binding FilePath.FullPath}"
											Width="Auto"
											Style="{StaticResource lblPathValue}"
											/>
								</StackPanel>

								<StackPanel Orientation="Horizontal">
									<Label
											Content="outline path"
											Style="{StaticResource lblTitle}"
											/>
									<Label
											Content="{Binding OutlinePath.FullPath}"
											Width="Auto"
											Style="{StaticResource lblPathValue}"
											/>
								</StackPanel>

								<StackPanel Orientation="Horizontal">
									<Label
											Content="levels"
											Style="{StaticResource lblTitle}"
											/>
									<Label
											Content="{Binding OutlinePathDepth}"
											Width="40"
											Style="{StaticResource lblPathValue}"
											/>
									<Label
											Content="{Binding OutlinePath.Depth}"
											Width="40"
											Style="{StaticResource lblPathValue}"
											/>
									<Label
											Content="{Binding OutlinePath.FolderNamesCount}"
											Width="40"
											Style="{StaticResource lblPathValue}"
											/>
								</StackPanel>

								<StackPanel Orientation="Horizontal">
									<Label
											Content="folders"
											Style="{StaticResource lblTitle}"
											/>
									<Label
											Content="{Binding OutlineFolders,
																				FallbackValue=outlinefolders}"
											Width="auto"
											Style="{StaticResource lblPathValue}"
											/>
