				<TreeView.ItemTemplate>
					<HierarchicalDataTemplate
							ItemContainerStyle="{StaticResource Style}"
							ItemsSource="{Binding Value.MergeItems}"
							>
						<ContentControl x:Name="PART_ContentControl"
