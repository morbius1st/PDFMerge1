			<TreeView Name="tv02"
					Grid.Column="1"
					Grid.Row="0"
					Margin="10,10,10,0"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					d:DataContext="{Binding Source={x:Static local:MainWindow.Mtx},
																Mode=OneWay}"
					DataContext="{Binding MrgTree.MergeTree,
																ElementName=mainWin,
																Mode=OneWay}"
					Background="#333333"
					Foreground="White"
					ItemsSource="{Binding}"
					>

				<TreeView.Resources>

					<DataTemplate x:Key="LEAF_02"
							DataType="pdf:PDFMergeItem"
							>
						<StackPanel Name="tv02_sp01"
								Orientation="Vertical"
								>
							<StackPanel Name="tv02_sp01_01"
									Margin="0"
									Orientation="Horizontal"
									>

								<Label Content="{Binding BookmarkTitle, FallbackValue=bookmark}"
										Margin="0"
										Width="120"
										Padding="0"
										Foreground="White"
										/>

							</StackPanel>
							<StackPanel Name="tv02_sp01_02"
									Orientation="Horizontal"
									>
								<Label Content="{Binding Depth, FallbackValue=0}"
										Margin="30,0,0,0"
										Width="20"
										Padding="0"
										FontSize="8"
										ContentStringFormat="{}( {0} )"
										Foreground="White"
										/>
								<Label Content="{Binding FileItem.FilePath.FullPath, FallbackValue=c:\\Path\\Path\\Path\\file.name}"
										Margin="0,0,0,0"
										Width="300"
										Padding="0"
										FontSize="8"
										Foreground="White"
										/>
							</StackPanel>
						</StackPanel>
					</DataTemplate>

					<DataTemplate x:Key="BRANCH_02"
							DataType="pdf:PDFMergeItem"
							>
						<StackPanel Name="tv02_sp02"
								Margin="5"
								Orientation="Vertical"
								>
							<StackPanel Name="tv02_sp02_01"
									Margin="0"
									Orientation="Horizontal"
									>
								<Label Content="{Binding BookmarkTitle, FallbackValue=bookmark}"
										Margin="0"
										Width="120"
										Padding="0"
										Foreground="White"
										/>
							</StackPanel>
							<StackPanel Name="tv02_sp02_02"
									Orientation="Horizontal"
									>
								<Label Content="{Binding Depth, FallbackValue=0}"
										Margin="30,0,0,0"
										Width="20"
										Padding="0"
										FontSize="8"
										ContentStringFormat="{}( {0} )"
										Foreground="White"
										/>
								<Label Content="{Binding FileItem.FilePath.FullPath, FallbackValue=c:\\Path\\Path\\Path\\file.name}"
										Margin="0"
										Width="300"
										Padding="0"
										FontSize="8"
										Foreground="White"
										/>
							</StackPanel>
						</StackPanel>
					</DataTemplate>

				</TreeView.Resources>
				<TreeView.ItemTemplate>
					<HierarchicalDataTemplate
							ItemContainerStyle="{StaticResource Style}"
							ItemsSource="{Binding Value.MergeItems}"
							>
						<ContentControl x:Name="PART_ContentControl" Content="{Binding Value}"
								Margin="0"
								Padding="0"
								/>
						<HierarchicalDataTemplate.Triggers>
							<DataTrigger
									Binding="{Binding Value.TreeNodeType}"
									Value="BRANCH"
									>
								<Setter TargetName="PART_ContentControl" Property="ContentTemplate" Value="{StaticResource BRANCH_02}" />
							</DataTrigger>
							<DataTrigger
									Binding="{Binding Value.TreeNodeType}"
									Value="LEAF"
									>
								<Setter TargetName="PART_ContentControl" Property="ContentTemplate" Value="{StaticResource LEAF_02}" />
							</DataTrigger>
						</HierarchicalDataTemplate.Triggers>


					</HierarchicalDataTemplate>
				</TreeView.ItemTemplate>
			</TreeView>


		</Grid>

