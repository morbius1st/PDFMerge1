			Style="{StaticResource FolderNFileLbl}" />

		<RichTextBox
			x:Name="rtbStatus"
			Grid.Row="0"
			Grid.Column="0"
			Margin="10,30,0,5"
			Padding="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Background="#333333"
			BorderBrush="Transparent"
			BorderThickness="0"
			FontFamily="Courier New"
			FontSize="12"
			Foreground="White"
			HorizontalScrollBarVisibility="Visible"
