					<Run Text="RichTextBox" />
				</Paragraph>
			</FlowDocument>
		</RichTextBox>

		<Label
			Grid.Row="0"
			Grid.Column="1"
			Margin="15.4,5,0,0"
			Content="Settings"
			Style="{StaticResource FolderNFileLbl}" />
		<RichTextBox
			x:Name="rtbSettings"
			Grid.Row="0"
			Grid.Column="1"
			Margin="10,30,10,5"
			Padding="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Background="#333333"
			BorderBrush="Transparent"
			FontFamily="Courier New"
			FontSize="12"
			Foreground="White"
			HorizontalScrollBarVisibility="Visible"
			Style="{DynamicResource RichTextBoxStyle1}"
			VerticalScrollBarVisibility="Visible">


			<FlowDocument PageWidth="2000">
				<Paragraph>
					<Run Text="RichTextBox" />
				</Paragraph>
			</FlowDocument>
		</RichTextBox>


		<Label
			Grid.Row="1"
			Grid.Column="0"
			Width="117"
			Margin="10,5,0,0"
			Content="Package Folder"
			Style="{StaticResource FolderNFileLbl}" />


		<TextBox
			Name="tbxInFolder"
			Grid.Row="1"
			Grid.Column="0"
			Grid.ColumnSpan="2"
			Margin="110,5,10,0"
			Style="{StaticResource FolderNFileTbx}"
			Text="Package Folder Name" />


		<Label
			Grid.Row="1"
			Grid.Column="0"
			Width="117"
			Margin="10,24,0,0"
			Content="Output Folder"
			Style="{StaticResource FolderNFileLbl}" />


		<TextBox
			Name="tbxOutFolder"
			Grid.Row="1"
			Grid.Column="0"
			Grid.ColumnSpan="2"
			Margin="110,24,10,0"
			Style="{StaticResource FolderNFileTbx}"
			Text="PDF Output Folder Name" />


		<Label
			Grid.Row="1"
			Grid.Column="0"
			Width="117"
			Margin="10,43,0,0"
			Content="Output File"
			Style="{StaticResource FolderNFileLbl}" />


		<TextBox
			Name="tbxOutFile"
			Grid.Row="1"
			Grid.Column="0"
			Width="300"
			Margin="110,43,0,0"
			HorizontalAlignment="Left"
			Style="{StaticResource FolderNFileTbx}"
			Text="PDF Output File Name" />

		<Button
			x:Name="btnSelFolder"
			Grid.Row="1"
			Grid.Column="1"
			Width="90"
			Height="30"
			Margin="0,0,110,10"
			HorizontalAlignment="Right"
			VerticalAlignment="Bottom"
			Click="BtnSelFolder_Click"
			Content="Select Folder" />

		<Button
			x:Name="btnGo"
			Grid.Row="1"
			Grid.Column="1"
			Width="90"
			Height="30"
			Margin="0,0,10,10"
			HorizontalAlignment="Right"
			VerticalAlignment="Bottom"
			Click="btnGo_Click"
			Content="Go" />

		<ProgressBar
			Name="configProgressBar"
			Height="2"
			Margin="10,29,0,0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Top"
			Background="Transparent"
			BorderThickness="0" />

	</Grid>
</Window>
