<Window x:Name="MainWin"
		x:Class="_TemplateProject.Windows.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:_TemplateProject.Windows"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:shsup="clr-namespace:SharedWPF.ShSupport"
		Title="MainWindow"
		Width="1400"
		Height="900"
		mc:Ignorable="d"
		Background="{StaticResource Normal.Window.Background}"
		Foreground="White"
		Loaded="MainWindow_OnLoaded"
		>
	<Window.Resources>
		<ResourceDictionary>

			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="ResourceFiles/XamlResourcesLinked/CsScrollBar.xaml" />
				<ResourceDictionary Source="ResourceFiles/XamlResourcesLinked/CsScrollViewer.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<shsup:AddParameterConverter x:Key="AddParamConverter"/>

			<sys:Double x:Key="BtnWidth">84</sys:Double>
			<sys:Double x:Key="BtnHeight">28</sys:Double>

		</ResourceDictionary>
	</Window.Resources>


	<Grid Margin="0,0,5,0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="120" />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="40" />
		</Grid.RowDefinitions>

		<StackPanel
				Grid.Column="1"
				Grid.Row="0"
				Margin="5"
				HorizontalAlignment="Right"
				VerticalAlignment="Top"
				Orientation="Vertical"
				>

			<Button x:Name="BtnSuiteSetg"
					Content="Suite Settings"
					Width="{StaticResource BtnWidth}"
					Height="{StaticResource BtnHeight}"
					Click="BtnSuiteSetg_OnClick"
					/>

			<Button x:Name="BtnPtojSetg"
					Content="Project Settings"
					Margin="0,5,0,0"
					Width="{StaticResource BtnWidth}"
					Height="{StaticResource BtnHeight}"
					Click="BtnPtojSetg_OnClick"
					/>

			<Button
					Content="Menu Test 1"
					Margin="0,5,0,0"
					Width="{StaticResource BtnWidth}"
					Height="{StaticResource BtnHeight}"
					Click="BtnMenuTest1_OnClick"
					/>

			<Button
					Content="Menu Start"
					Margin="0,5,0,0"
					Width="{StaticResource BtnWidth}"
					Height="{StaticResource BtnHeight}"
					Click="BtnMenuStart_OnClick"
					/>

			<Grid>

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<Button x:Name="BtnClrTblk"
						Content="Clr Tb"
						Grid.Column="0"
						Margin="0,5,2.5,0"
						Height="{StaticResource BtnHeight}"
						Click="BtnClrTblk_OnClick"
						/>

				<Button x:Name="BtnClrFd"
						Content="Clr Fd"
						Grid.Column="1"
						Margin="2.5,5,0,0"
						Height="{StaticResource BtnHeight}"
						Click="BtnClrFd_OnClick"
						/>

			</Grid>

			<Button
					Content="TxBlk Add"
					Margin="0,5,0,0"
					Width="{StaticResource BtnWidth}"
					Height="{StaticResource BtnHeight}"
					Click="BtnTxBlkAdd_OnClick"
					/>

			<Button
					Content="TxBlk Null"
					Margin="0,5,0,0"
					Width="{StaticResource BtnWidth}"
					Height="{StaticResource BtnHeight}"
					Click="BtnTxBlkAddNull_OnClick"
					/>

			<Button
					Content="TxBlk Set"
					Margin="0,5,0,0"
					Width="{StaticResource BtnWidth}"
					Height="{StaticResource BtnHeight}"
					Click="BtnTxBlkSet_OnClick"
					/>

			<Button
					Content="TxBlk Test"
					Margin="0,5,0,0"
					Width="{StaticResource BtnWidth}"
					Height="{StaticResource BtnHeight}"
					Click="BtnTxBlkTest_OnClick"
					/>


			<Button
					Content="TxBlk Show"
					Margin="0,5,0,0"
					Width="{StaticResource BtnWidth}"
					Height="{StaticResource BtnHeight}"
					Click="BtnTxBlkShow_OnClick"
					/>

			<Button
					x:Name="btnTestScroll"
					Content="Test Scroll"
					Margin="0,5,0,0"
					Width="{StaticResource BtnWidth}"
					Height="{StaticResource BtnHeight}"
					Click="BtnTestScroll_OnClick"
					/>

		</StackPanel>

		<StackPanel
				Grid.Column="0"
				Grid.Row="1"
				Grid.ColumnSpan="2"
				Margin="5"
				HorizontalAlignment="Right"
				VerticalAlignment="Bottom"
				Orientation="Horizontal"
				>

			<Button x:Name="BtnExit"
					Content="Exit"
					Width="{StaticResource BtnWidth}"
					Height="{StaticResource BtnHeight}"
					Click="BtnExit_OnClick"
					/>

		</StackPanel>

		<Grid
				Grid.Column="0"
				Grid.Row="0"
				>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>


			<GridSplitter x:Name="gridSplitter"
					Grid.Column="1"
					Margin="2,0,2,0"
					Width="3"
					Height="100"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					/>

			<Grid
					x:Name="gd_tblk"
					Grid.Column="0"
					Grid.Row="0"
					>

				<ScrollViewer x:Name="TblkSv1"
						Grid.Column="0"
						Grid.Row="0"
						Padding="5"
						HorizontalScrollBarVisibility="Visible"
						VerticalScrollBarVisibility="Visible"
						Focusable="False"
						>
					<TextBlock x:Name="Tblk1"
							FontFamily="Consolas"
							FontSize="18"
							Background="Transparent"
							Foreground="White"
							TextWrapping="Wrap"
							Width="{Binding ElementName=TblkSv1, Path=ActualWidth, Converter={StaticResource AddParamConverter}, ConverterParameter=150.0}"
							>

					</TextBlock>

					<ScrollViewer.Resources>
						<Style TargetType="{x:Type ScrollViewer}">
							<Setter Property="Template" Value="{StaticResource CsScrollViewerCt}" />
							<Setter Property="shsup:CsScrollBarAp.ScrollBarWidth" Value="6" />
							<Setter Property="shsup:CsScrollBarAp.TrackWidth" Value="6" />
						</Style>
					</ScrollViewer.Resources>

				</ScrollViewer>

				<StackPanel x:Name="sp_arrows_tblk"
						Grid.Column="0"
						Grid.Row="0"
						Margin="0,6,12,0"
						HorizontalAlignment="Right"
						VerticalAlignment="Top"
						Orientation="Horizontal"
						>
					<StackPanel Orientation="Vertical">

						<Button
								Content=""
								Margin="0,13.5,0,0"
								Width="15"
								Height="15"
								Padding="-2,-4,0,0"
								FontSize="16"
								FontFamily="Segoe UI Symbol"
								Background="Black"
								Foreground="White"
								BorderThickness="0"

								x:Name="btnLeftTb"
								Click="BtnLeft_OnClick"
								Tag="tblk"
								/>

					</StackPanel>

					<StackPanel Orientation="Vertical">
						<Button
								Tag="tblk"
								x:Name="btnUpTb"
								Content=""
								Margin="0,0,0,0"
								Width="15"
								Height="15"
								Padding="-2,-4,0,0"
								FontSize="16"
								FontFamily="Segoe UI Symbol"
								Background="Black"
								Foreground="White"
								BorderThickness="0"
								RenderTransformOrigin="0.5,0.5"
								Click="BtnUp_OnClick"
								>
							<Button.RenderTransform>
								<TransformGroup>
									<RotateTransform Angle="90" />
								</TransformGroup>
							</Button.RenderTransform>
						</Button>

						<Button
								Tag="tblk"
								x:Name="btnDnTb"
								Content=""
								Margin="0,12.5,0,0"
								Width="15"
								Height="15"
								Padding="-2,-4,0,0"
								FontSize="16"
								FontFamily="Segoe UI Symbol"
								Background="Black"
								Foreground="White"
								BorderThickness="0"
								RenderTransformOrigin="0.5,0.5"
								Click="BtnDn_OnClick"
								>
							<Button.RenderTransform>
								<TransformGroup>
									<RotateTransform Angle="90" />
								</TransformGroup>
							</Button.RenderTransform>
						</Button>

					</StackPanel>

					<StackPanel Orientation="Vertical">

						<Button
								Tag="tblk"
								x:Name="btnRightTb"
								Content=""
								Margin="0,13.5,0,0"
								Width="15"
								Height="15"
								Padding="-2,-4,0,0"
								FontSize="16"
								FontFamily="Segoe UI Symbol"
								Background="Black"
								Foreground="White"
								BorderThickness="0"
								Click="BtnRight_OnClick"
								/>

					</StackPanel>

				</StackPanel>

			</Grid>

			<Grid
					x:Name="gd_fdsv"
					Grid.Column="2"
					Grid.Row="0"
					>

				<FlowDocumentScrollViewer x:Name="FdSv0"
						Grid.Column="0"
						Grid.Row="0"
						Margin="1"
						Background="Black"
						BorderBrush="White"
						HorizontalScrollBarVisibility="Visible"
						>
					<FlowDocumentScrollViewer.Document>
						<FlowDocument
								FontFamily="DejaVu Sans Mono"
								FontSize="18"
								Foreground="Aquamarine"
								MinPageWidth="800"
								MaxPageWidth="10000"
								TextAlignment="Left"
								LineHeight="NaN"
								>
							<Paragraph>
								<Span>
									<Bold>
										<Run>this is a test</Run>
									</Bold>
									<LineBreak />
									<Run>this is a test</Run>
									<LineBreak />
								</Span>
							</Paragraph>
						</FlowDocument>
					</FlowDocumentScrollViewer.Document>

					<FlowDocumentScrollViewer.Resources>
						<Style TargetType="{x:Type ScrollViewer}">
							<Setter Property="Template" Value="{StaticResource CsScrollViewerCt}" />
							<Setter Property="Background" Value="Black" />
							<Setter Property="BorderBrush" Value="White" />
							<Setter Property="Margin" Value="1" />
							<Setter Property="BorderThickness" Value="1" />
							<Setter Property="shsup:CsScrollBarAp.ScrollBarWidth" Value="6" />
							<Setter Property="shsup:CsScrollBarAp.TrackWidth" Value="6" />
							<!-- <Setter Property="Tag" Value="{Binding ElementName=FdSv0, Mode=OneTime}" /> -->

						</Style>
					</FlowDocumentScrollViewer.Resources>

				</FlowDocumentScrollViewer>

				<StackPanel x:Name="sp_arrows_fd"
						Grid.Column="0"
						Grid.Row="0"
						Margin="0,6,12,0"
						HorizontalAlignment="Right"
						VerticalAlignment="Top"
						Orientation="Horizontal"
						
						>
					<StackPanel.Background>
						<SolidColorBrush Color="{StaticResource Gray.150}"/>
					</StackPanel.Background>
					<StackPanel Orientation="Vertical">

						<Button
								Content=""
								Margin="0,13.5,0,0"
								Width="15"
								Height="15"
								Padding="-2,-4,0,0"
								FontSize="16"
								FontFamily="Segoe UI Symbol"
								Background="Black"
								Foreground="White"
								BorderThickness="0"

								x:Name="btnLeftFd"
								Click="BtnLeft_OnClick"
								Tag="fdSv"

								/>

					</StackPanel>

					<StackPanel Orientation="Vertical">
						<Button
								Content=""
								Margin="0,0,0,0"
								Width="15"
								Height="15"
								Padding="-2,-4,0,0"
								FontSize="16"
								FontFamily="Segoe UI Symbol"
								Background="Black"
								Foreground="White"
								BorderThickness="0"
								RenderTransformOrigin="0.5,0.5"

								x:Name="btnUpFd"
								Click="BtnUp_OnClick"
								Tag="fdSv"

								>
							<Button.RenderTransform>
								<TransformGroup>
									<RotateTransform Angle="90" />
								</TransformGroup>
							</Button.RenderTransform>
						</Button>

						<Button
								Content=""
								Margin="0,12.5,0,0"
								Width="15"
								Height="15"
								Padding="-2,-4,0,0"
								FontSize="16"
								FontFamily="Segoe UI Symbol"
								Background="Black"
								Foreground="White"
								BorderThickness="0"
								RenderTransformOrigin="0.5,0.5"

								x:Name="btnDnFd"
								Click="BtnDn_OnClick"
								Tag="fdSv"

								>
							<Button.RenderTransform>
								<TransformGroup>
									<RotateTransform Angle="90" />
								</TransformGroup>
							</Button.RenderTransform>
						</Button>

					</StackPanel>

					<StackPanel Orientation="Vertical">

						<Button
								Content=""
								Margin="0,13.5,0,0"
								Width="15"
								Height="15"
								Padding="-2,-4,0,0"
								FontSize="16"
								FontFamily="Segoe UI Symbol"
								Background="Black"
								Foreground="White"
								BorderThickness="0"

								x:Name="btnRightFd"
								Click="BtnRight_OnClick"
								Tag="fdSv"

								/>

					</StackPanel>

				</StackPanel>

			</Grid>

			<!-- removed
			<ScrollViewer
					Grid.Column="1"
					Grid.Row="0"
					Padding="5"
					HorizontalScrollBarVisibility="Visible"
					VerticalScrollBarVisibility="Visible"
					Focusable="False"
					>

				<TextBlock x:Name="MsgBlk"
						FontFamily="Consolas"
						FontSize="14"
						Foreground="White"
						Focusable="True"
						Text="{Binding ElementName=WinMain,
													 Path=Messages}"
						/>

				<ScrollViewer.Resources>
					<Style TargetType="{x:Type ScrollViewer}">
						<Setter Property="Template" Value="{StaticResource CsScrollViewerCt}" />
						<Setter Property="shsup:CsScrollBarAp.ScrollBarWidth" Value="6" />
						<Setter Property="shsup:CsScrollBarAp.TrackWidth" Value="6" />
					</Style>
				</ScrollViewer.Resources>
			</ScrollViewer>


			<Button x:Name="BtnCopy"
					Content="Copy"
					Grid.Column="1"
					Grid.Row="0"
					Margin="0,0,20,15"
					HorizontalAlignment="Right"
					VerticalAlignment="Bottom"
					Background="Transparent"
					Foreground="White"
					BorderThickness="0"
					/>
					-->

		</Grid>

	</Grid>
</Window>
