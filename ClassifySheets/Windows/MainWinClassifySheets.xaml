<Window Name="MainWin"
				x:Class="ClassifySheets.Windows.MainWinClassifySheets"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:local="clr-namespace:ClassifySheets.Windows"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:sys="clr-namespace:System;assembly=mscorlib"
				Title="MainWindow"
				Width="1600"
				Height="1200"
				DataContext="{Binding ElementName=MainWin}"
				Loaded="Window_Loaded"
				mc:Ignorable="d"
				Background="{StaticResource Normal.Window.Background}"
				ContentRendered="MainWin_ContentRendered">
	<Window.Resources>

		<sys:Double x:Key="Title.Width">130</sys:Double>

		<Style x:Key="Label.Base"
					 TargetType="Label">
			<Setter Property="Margin"
							Value="0" />
			<Setter Property="Padding"
							Value="0" />
			<Setter Property="Foreground"
							Value="White" />
		</Style>

		<Style x:Key="StackPanel.Base"
					 TargetType="StackPanel">
			<Setter Property="Margin"
							Value="0" />
			<Setter Property="VerticalAlignment"
							Value="Top" />
			<Setter Property="HorizontalAlignment"
							Value="Left" />
		</Style>

		<Style x:Key="StackPanel.Horizontal"
					 TargetType="StackPanel"
					 BasedOn="{StaticResource StackPanel.Base}">
			<Setter Property="Orientation"
							Value="Horizontal" />
			<Setter Property="Margin"
							Value="5,5,0,0" />
		</Style>

	</Window.Resources>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="140" />
			<RowDefinition Height="14" />
			<RowDefinition Height="486*" />
			<RowDefinition Height="487*" />
			<RowDefinition Height="auto" />
		</Grid.RowDefinitions>

		<StackPanel Grid.Column="1"
								Grid.Row="5"
								Grid.ColumnSpan="2"
								Margin="5"
								HorizontalAlignment="Right"
								VerticalAlignment="Bottom"
								Orientation="Horizontal">

			<Button x:Name="BtnDebug"
							Content="Debug"
							Margin="5,0,0,0"
							Width="{StaticResource Normal.Button.Width}"
							Height="{StaticResource Normal.Button.Height}"
							Click="BtnDebug_OnClick"
							Style="{StaticResource Button.Normal.Style}" />

			<Button x:Name="BtnClassify"
							Content="Classify"
							Margin="5,0,0,0"
							Width="{StaticResource Normal.Button.Width}"
							Height="{StaticResource Normal.Button.Height}"
							Click="BtnClassify_OnClick"
							Style="{StaticResource Button.Normal.Style}" />

			<Button x:Name="BtnListBase"
							Content="List Base"
							Margin="5,0,0,0"
							Width="{StaticResource Normal.Button.Width}"
							Height="{StaticResource Normal.Button.Height}"
							Click="BtnListBase_OnClick"
							Style="{StaticResource Button.Normal.Style}" />

			<Button x:Name="BtnProgress"
							Content="Progress"
							Margin="5,0,0,0"
							Width="{StaticResource Normal.Button.Width}"
							Height="{StaticResource Normal.Button.Height}"
							Click="BtnProgress_OnClick"
							Style="{StaticResource Button.Normal.Style}" />

			<Button x:Name="BtnShow"
							Content="Show"
							Margin="5,0,0,0"
							Width="{StaticResource Normal.Button.Width}"
							Height="{StaticResource Normal.Button.Height}"
							Click="BtnShow_OnClick"
							Style="{StaticResource Button.Normal.Style}" />

			<Button x:Name="BtnGo"
							Content="Go"
							Margin="5,0,0,0"
							Width="{StaticResource Normal.Button.Width}"
							Height="{StaticResource Normal.Button.Height}"
							Click="BtnGo_OnClick"
							Style="{StaticResource Button.Normal.Style}" />

			<Button x:Name="BtnExit"
							Content="Exit"
							Margin="5,0,0,0"
							Width="{StaticResource Normal.Button.Width}"
							Height="{StaticResource Normal.Button.Height}"
							Click="BtnExit_OnClick"
							Style="{StaticResource Button.Normal.Style}" />
		</StackPanel>

		<Label Name="lbl1"
					 Content="{Binding Path=Lbl1Content,
													FallbackValue='|'}"
					 Grid.Column="0"
					 Grid.Row="2"
					 Margin="5,-2,0,0"
					 Padding="0,0,0,2"
					 HorizontalAlignment="Left"
					 VerticalAlignment="Center"
					 Foreground="White" />


		<ProgressBar Name="Pb1"
								 Grid.Column="0"
								 Grid.Row="2"
								 Margin="5,0,5,1"
								 Height="2"
								 VerticalAlignment="Bottom"
								 HorizontalContentAlignment="Stretch"
								 Maximum="{Binding Pb1MaximumValue}"
								 ScrollViewer.VerticalScrollBarVisibility="Disabled"
								 Value="{Binding Pb1Value}"
								 Background="Transparent"
								 BorderThickness="0" />



		<Label Name="lbl2"
					 Grid.Column="1"
					 Grid.Row="2"
					 Margin="5,-2,0,0"
					 Padding="0,0,0,2"
					 HorizontalAlignment="Left"
					 VerticalAlignment="Center"
					 Foreground="White" />
		<!--  Content="{Binding Path=Lbl2Content,  -->
		<!--  FallbackValue=|}"  -->


		<ProgressBar Name="Pb2"
								 Grid.Column="1"
								 Grid.Row="2"
								 Margin="5,0,5,0"
								 Height="3"
								 VerticalAlignment="Bottom"
								 HorizontalContentAlignment="Stretch"
								 Maximum="{Binding Pb2MaximumValue}"
								 ScrollViewer.VerticalScrollBarVisibility="Disabled"
								 Background="Transparent"
								 BorderThickness="0" />
		<!--  Value="{Binding Pb2Value}"  -->

		<TextBox Name="Tbx1Prog"
						 Grid.Column="1"
						 Grid.Row="1"
						 Margin="5"
						 FontFamily="Droid Sans Mono"
						 HorizontalScrollBarVisibility="Visible"
						 Text="{Binding Path=Tbx1Progress,
											 Mode=OneWay}"
						 VerticalScrollBarVisibility="Visible"
						 Background="Transparent"
						 Foreground="White" />



		<TextBox Name="Tbx1Msg"
						 Grid.Column="0"
						 Grid.Row="3"
						 Grid.RowSpan="2"
						 Margin="5,0,5,5"
						 FontFamily="Droid Sans Mono"
						 HorizontalScrollBarVisibility="Visible"
						 Text="{Binding Path=Tbx1Message,
											 Mode=OneWay}"
						 VerticalScrollBarVisibility="Visible"
						 Background="Transparent"
						 Foreground="White" />

		<TextBox Name="Tbx2Msg"
						 Grid.Column="1"
						 Grid.Row="3"
						 Grid.RowSpan="2"
						 Margin="5,0,5,5"
						 FontFamily="Droid Sans Mono"
						 HorizontalScrollBarVisibility="Visible"
						 Text="{Binding Path=Tbx2Message,
											 Mode=OneWay}"
						 VerticalScrollBarVisibility="Visible"
						 Background="Transparent"
						 Foreground="White" 
						/>

		<StackPanel Grid.Column="0"
								Grid.Row="0"
								Grid.ColumnSpan="2"
								Margin="5"
								Orientation="Vertical"
								Style="{StaticResource StackPanel.Base}">

			<StackPanel Style="{StaticResource StackPanel.Horizontal}">

				<Label Content="ClassF Full Path"
							 Width="{StaticResource Title.Width}"
							 Style="{StaticResource Label.Base}" />

				<Label Content="{Binding ElementName=MainWin,
															Mode=OneWay,
															FallbackValue='Path',
															Path=ClassificationFile.FullFilePath}"
							 Style="{StaticResource Label.Base}" />

			</StackPanel>

			<StackPanel Style="{StaticResource StackPanel.Horizontal}">

				<Label Content="Sample File Bldg"
							 Width="{StaticResource Title.Width}"
							 Style="{StaticResource Label.Base}" />

				<Label Content="{Binding ElementName=MainWin,
															Mode=OneWay,
															FallbackValue='Bldg',
															Path=TestFileList.Building}"
							 Style="{StaticResource Label.Base}" />

			</StackPanel>

			<StackPanel Style="{StaticResource StackPanel.Horizontal}">

				<Label Content="Sample Full Path"
							 Width="{StaticResource Title.Width}"
							 Style="{StaticResource Label.Base}" />

				<Label Content="{Binding ElementName=MainWin,
															Mode=OneWay,
															FallbackValue='Path',
															Path=ClassificationFile.SampleFilePath}"
							 Style="{StaticResource Label.Base}" />

			</StackPanel>

		</StackPanel>



		<StackPanel Grid.Column="0"
								Grid.Row="1"
								Margin="5,0,0,0"
								Orientation="Vertical"
								Style="{StaticResource StackPanel.Base}">

			<StackPanel Margin="5,0,0,0"
									Style="{StaticResource StackPanel.Horizontal}">

				<Label Content="Base of Tree | Count"
							 Width="{StaticResource Title.Width}"
							 Style="{StaticResource Label.Base}" />

				<Label Content="{Binding ElementName=MainWin,
															Mode=OneWay,
															FallbackValue='Count',
															Path=BaseOfTree.Children.Count}"
							 Style="{StaticResource Label.Base}" />

			</StackPanel>

			<StackPanel Margin="10,5,0,8"
									DataContext="{Binding ElementName=MainWin,
																Path=BaseOfTree.Children[1]}"
									Orientation="Vertical"
									Style="{StaticResource StackPanel.Base}">

				<Label Content="Base of tree / node [1]"
							 Margin="0,5,0,0"
							 Style="{StaticResource Label.Base}" />

				<StackPanel Style="{StaticResource StackPanel.Horizontal}">
					<Label Content="node[1] | Title"
								 Width="{StaticResource Title.Width}"
								 Style="{StaticResource Label.Base}" />
					<Label Content="{Binding Path=Item.Title,
																Mode=OneWay,
																FallbackValue='Title'}"
								 Style="{StaticResource Label.Base}" />
				</StackPanel>

				<StackPanel Style="{StaticResource StackPanel.Horizontal}">
					<Label Content="node[1] | Desc."
								 Width="{StaticResource Title.Width}"
								 Style="{StaticResource Label.Base}" />
					<Label Content="{Binding Path=Item.Description,
																Mode=OneWay,
																FallbackValue='Description'}"
								 Style="{StaticResource Label.Base}" />
				</StackPanel>

			</StackPanel>

		</StackPanel>
	</Grid>
</Window>
