									Focusable="false"
									Background="{TemplateBinding Background}"
									IsChecked="{Binding IsDropDownOpen,
																		Mode=TwoWay,
																		RelativeSource={RelativeSource TemplatedParent}}"
									Template="{StaticResource ComboBoxToggleButton1}" />
