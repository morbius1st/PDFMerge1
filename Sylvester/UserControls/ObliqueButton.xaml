		<sys:Boolean x:Key="ButtonDefault">true</sys:Boolean>

		<sys:Double x:Key="Button.Disabled.Opacity">0.60</sys:Double>

		<SolidColorBrush x:Key="Path.Arrow.Fill" Color="#999999" />

