<UserControl Name="headerControl"
		x:Class="Sylvester.HeaderControl"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:local="clr-namespace:Sylvester"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		d:DesignHeight="450"
		d:DesignWidth="800"
		mc:Ignorable="d"
		>
	<UserControl.Resources>

		<Style x:Key="label"
				TargetType="Label"
				>
			<Setter Property="Foreground" Value="White" />
			<Setter Property="Margin" Value="3,2,0,0" />
			<Setter Property="Padding" Value="0,0,0,2" />
			<Setter Property="HorizontalAlignment" Value="Left" />
			<Setter Property="VerticalAlignment" Value="Bottom" />
			<Setter Property="HorizontalContentAlignment" Value="Left" />

		</Style>

		<Style x:Key="lblStats"
				TargetType="Label"
				BasedOn="{StaticResource label}"
				>
			<Setter Property="Width" Value="Auto" />
		</Style>

		<Style x:Key="lblCount"
				TargetType="Label"
				BasedOn="{StaticResource label}"
				>
			<Setter Property="Margin" Value="6,0,0,0" />
			<Setter Property="ContentStringFormat" Value="D5" />
		</Style>

	</UserControl.Resources>
	<StackPanel Orientation="Vertical">

		<StackPanel
				Margin="0,0,0,0"
				HorizontalAlignment="Stretch"
				Orientation="Horizontal"
				Background="#395482CD"
				>

			<Label Content="{Binding Title, ElementName=headerControl, FallbackValue=Current}"
					Margin="3,-3,0,-1"
					FontSize="22"
					Style="{StaticResource label}"
					/>
		</StackPanel>

		<StackPanel
				Margin="0,2,0,0"
				Orientation="Horizontal"
				>

			<StackPanel
					Margin="0,0,0,0"
					Orientation="Vertical"
					>
				<Label Content="Directory"
						Width="87"
						Style="{StaticResource label}"
						/>
				<Label Content="File Summary"
						Width="80"
						Style="{StaticResource label}"
						/>
			</StackPanel>

			<StackPanel Orientation="Vertical">

				<Label Content="{Binding Path=Directory, FallbackValue=c:\\directory\\directory}"
						Style="{StaticResource label}"
						/>

				<StackPanel Orientation="Horizontal">

					<StackPanel
							Width="80"
							Orientation="Horizontal"
							>
						<Label Content="Total"
								Style="{StaticResource lblStats}"
								/>
						<Label Content="{Binding Path=FilesFound, FallbackValue=0}"
								Style="{StaticResource lblCount}"
								/>
					</StackPanel>

					<StackPanel
							Width="120"
							Orientation="Horizontal"
							>
						<Label Content="Sheets PDF's"
								Style="{StaticResource lblStats}"
								/>
						<Label Content="{Binding Path=SheetPDFs, FallbackValue=0}"
								Style="{StaticResource lblCount}"
								/>
					</StackPanel>

					<StackPanel
							Width="120"
							Orientation="Horizontal"
							>
						<Label Content="Other PDF's"
								Foreground="LightGray"
								Style="{StaticResource lblStats}"
								/>
						<Label Content="{Binding Path=NonSheetPdfsFiles, FallbackValue=0}"
								Foreground="LightGray"
								Style="{StaticResource lblCount}"
								/>
					</StackPanel>

					<Label Content="Other Files"
							Foreground="#bababa"
							Style="{StaticResource lblStats}"
							/>
					<Label Content="{Binding Path=OtherFiles, FallbackValue=0}"
							Foreground="#bababa"
							Style="{StaticResource lblCount}"
							/>

				</StackPanel>
			</StackPanel>
		</StackPanel>
	</StackPanel>
</UserControl>
