<UserControl
		x:Class="Sylvester.FolderPath"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:local="clr-namespace:Sylvester"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		x:Name="folderPath"
		Margin="6,0,0,0"
		MinHeight="13"
		Padding="0,0,0,0"
		d:DesignHeight="30"
		d:DesignWidth="250"
		mc:Ignorable="d"
		>
	<UserControl.Resources>
		<local:PathTypeVisibilityConverter x:Key="PathTypeVisibilityConverter" />

		<Style x:Key="SkewedButtonStyle" TargetType="local:SkewedButton">
			<!-- <Setter Property="Visibility" > -->
			<!-- 	<Setter.Value> -->
			<!-- 		<MultiBinding Converter="{StaticResource PathTypeVisibilityConverter}"> -->
