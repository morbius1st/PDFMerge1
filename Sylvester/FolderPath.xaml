			<!-- 					Path="SkewedButtonType" /> -->
			<!-- 		</MultiBinding> -->
			<!-- 	</Setter.Value> -->
			<!-- </Setter> -->
		</Style>


	</UserControl.Resources>
	<DockPanel
			x:Name="PathDockPanel"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			>


			<local:SkewedButton
					x:Name="SkewedButton4"
					DockPanel.Dock="Right"
					FontColor="#CCCCCC"
					FontSize="{Binding ElementName=folderPath,
														 Path=FontSize,
														 FallbackValue=7}"

					Index="-1"
					Text="C:\path"
					SkewedButtonType="4"
					Style="{StaticResource SkewedButtonStyle}"
					/>




			<local:SkewedButton
					x:Name="SkewedButton2"
					DockPanel.Dock="Right"
					FontColor="#CCCCCC"
					FontSize="{Binding ElementName=folderPath,
														 Path=FontSize,
														 FallbackValue=7}"

					Index="-1"
					ShowArrow="False"
					Text="Select Path"
					FavoritesBrush="Blue"
					SkewedButtonType="2"
					Style="{StaticResource SkewedButtonStyle}"
					/>


		<local:SkewedButton
					x:Name="SkewedButton1"
					DockPanel.Dock="Right"
					FontColor="#CCCCCC"
					FontSize="{Binding ElementName=folderPath,
														 Path=FontSize,
														 FallbackValue=7}"
					Index="-1"
					ShowArrow="False"
					ShowFavorite="True"
					Text=""
					FavoritesBrush="OrangeRed"
					SkewedButtonType="1"
					Style="{StaticResource SkewedButtonStyle}"

					>
		</local:SkewedButton>



