		<DockPanel
				Grid.Column="0"
				Grid.Row="1"
				Margin="0,0,5,0"
				>

			<Label
					Content="Projects"
					Margin="0,0,0,5"
					Padding="5,0,0,3"
					HorizontalAlignment="Stretch"
					FontSize="{StaticResource Header.Title.L2.Font.Size}"
					Background="{StaticResource Win.Title.Background}"
					Foreground="White"
					DockPanel.Dock="Top"
					/>

			<ListView x:Name="lvProjects"
					HorizontalContentAlignment="Left"
					VerticalContentAlignment="Top"
					DataContext="{Binding ElementName=SavedFolderWin,
																Path=SavedFolders}"
					Background="#222222"
					DockPanel.Dock="Left"
					SelectedValue="{Binding TargetNullValue={x:Null},
																	Path=SelectedFolderProject,
																	ElementName=SavedFolderWin,
																	FallbackValue={x:Null}}"
					SelectionChanged="LvProjects_SelectionChanged"
					SelectionMode="Single"
					ItemTemplate="{DynamicResource DataTemplate1}"
					ItemsSource="{Binding}"
					>
				<!--  SelectedIndex="{Binding SelectedFolderProjectIdx, ElementName=SavedFolderWin}"  -->
				<!--  DataContext="{Binding ElementName=SavedFolderWin,  -->
				<!--  Path=SavedFolders  -->
				<!--  IsSynchronizedWithCurrentItem="True"  -->
				<!--  ItemsSource="{Binding SavedFolders}"  -->
				<ListView.Resources>
					<DataTemplate x:Key="DataTemplate1"
							DataType="local:SavedFolderProject"
							>
						<StackPanel
								Margin="0,2,0,3"
								Orientation="Horizontal"
								>
							<ContentControl
									Width="{StaticResource Icon.Width}"
									Height="{StaticResource Icon.Height}"
									VerticalAlignment="Center"
									HorizontalContentAlignment="Left"
									VerticalContentAlignment="Top"
									>
								<ContentControl.Content>
									<Binding
											Converter="{StaticResource incv}"
											ConverterParameter="{x:Static app:App.Icon_FolderProject00}"
											Path="Icon"
											/>

								</ContentControl.Content>
							</ContentControl>

							<StackPanel
									VerticalAlignment="Center"
									Orientation="Vertical"
									>
								<Label
										Content="{Binding Name,
																			FallbackValue='Nothing Saved'}"
										Margin="10,0,0,0"
										Padding="0"
										Foreground="White"
										/>

								<StackPanel Orientation="Horizontal">
									<StackPanel.Style>
										<Style TargetType="StackPanel">
											<Setter Property="Visibility" Value="Visible" />
											<Style.Triggers>
												<DataTrigger Value="{x:Static local:SavedFolderType.FAVORITES}" Binding="{Binding ElementName=SavedFolderWin, Path=SavedFolderType}">
													<Setter Property="Visibility" Value="Collapsed" />
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</StackPanel.Style>

									<Label
											Content="Saved: "
											Margin="15,0,0,0"
											Style="{StaticResource label.DateTime}"
											/>


									<Label
											Content="{Binding Path=DateTime,
																				FallbackValue=0}"
											Style="{StaticResource label.DateTime}"
											>

									</Label>
								</StackPanel>


							</StackPanel>
						</StackPanel>
					</DataTemplate>
				</ListView.Resources>
			</ListView>
			<!--    -->
		</DockPanel>


		<DockPanel
				Grid.Column="1"
				Grid.Row="1"
				Margin="0,0,0,0"
				>

			<Label
					Content="Folder Pairs"
					Margin="0,0,0,5"
					Padding="5,0,0,3"
					HorizontalAlignment="Stretch"
					FontSize="{StaticResource Header.Title.L2.Font.Size}"
					Background="{StaticResource Win.Title.Background}"
					Foreground="White"
					DockPanel.Dock="Top"
					/>

			<ListView x:Name="lvFolders"
					HorizontalContentAlignment="Left"
					VerticalContentAlignment="Top"
					DataContext="{Binding ElementName=SavedFolderWin,
																Path=FolderPairs}"
					Background="#222222"
					SelectedValue="{Binding ElementName=SavedFolderWin,
																	TargetNullValue={x:Null},
																	Path=SelectedFolderPair,
																	FallbackValue={x:Null}}"
					SelectionMode="Single"
					ItemTemplate="{DynamicResource DataTemplate2}"
					ItemsSource="{Binding}"
					>

				<ListView.Resources>
					<DataTemplate x:Key="DataTemplate2" x:Name="dtLvPair"
							DataType="local:SavedFolderPair"
							>
						<DockPanel
								Margin="0,2,0,3"
								Width="{Binding ElementName=lvFolders,
																Path=ActualWidth,
																FallbackValue=150,
																Converter={StaticResource iwc},
																ConverterParameter=8.0}"
								>
							<ContentControl
									Width="{StaticResource Icon.Width}"
									Height="{StaticResource Icon.Height}"
									Padding="0"
									VerticalAlignment="Top"
									HorizontalContentAlignment="Left"
									VerticalContentAlignment="Top"
									DockPanel.Dock="Left"
									>
								<ContentControl.Content>
									<Binding
											Converter="{StaticResource incv}"
											ConverterParameter="{x:Static app:App.Icon_FolderPair00}"
											Path="Icon"
											/>

								</ContentControl.Content>
							</ContentControl>

							<DockPanel
									Margin="12,0,0,0"
									HorizontalAlignment="Stretch"
									>
								<Label
										Content="{Binding Name,
																			FallbackValue='Nothing Saved'}"
										Padding="0"
										Foreground="White"
										DockPanel.Dock="Top"
										/>


								<StackPanel Name="SP1"
										Margin="10,0,0,0"
										HorizontalAlignment="Left"
										DockPanel.Dock="Top"
										Orientation="Vertical"
										>
									<DockPanel HorizontalAlignment="Left">
										<TextBlock x:Name="Tbx1"
												HorizontalAlignment="Right"
												Text="{Binding Current.FullFilePath,
																			 TargetNullValue='No Path Saved',
																			 FallbackValue='No Path Saved'}"
												Style="{StaticResource TextBlock.Path}"
												>
											<!--  FlowDirection="RightToLeft"  -->

										</TextBlock>
									</DockPanel>
									<DockPanel HorizontalAlignment="Left">
										<TextBlock x:Name="Tbx2"
												HorizontalAlignment="Right"
												Text="{Binding Revision.FullFilePath,
																			 FallbackValue='No Path Saved',
																			 TargetNullValue='No Path Saved'}"
												Style="{StaticResource TextBlock.Path}"
												>
											<!--  FlowDirection="RightToLeft"  -->
										</TextBlock>
									</DockPanel>
								</StackPanel>
							</DockPanel>
						</DockPanel>

					</DataTemplate>
				</ListView.Resources>
			</ListView>
		</DockPanel>

	</Grid>
