<Window x:Name="SavedFolderWin"
		x:Class="Sylvester.SavedFolders.SavedFoldersWin"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		xmlns:app="clr-namespace:Sylvester"
		xmlns:local="clr-namespace:Sylvester.SavedFolders"
		xmlns:res="clr-namespace:Sylvester.UserControls"
		xmlns:user="clr-namespace:Sylvester.UserControls"
		Title="{Binding ElementName=SavedFolderWin,
										Path=WinTitle}"
		Width="{x:Static local:SavedFoldersWin.MIN_WIDTH}"
		Height="{x:Static local:SavedFoldersWin.MIN_HEIGHT}"
		MinWidth="{x:Static local:SavedFoldersWin.MIN_WIDTH}"
		MinHeight="{x:Static local:SavedFoldersWin.MIN_HEIGHT}"
		DataContext="{Binding ElementName=SavedFolderWin}"
		mc:Ignorable="d"
		Background="{DynamicResource Window.Background}"
		Closing="SavedFolderWin_Closing"
		Initialized="SavedFolderWin_Initialized"
		Loaded="SavedFolderWin_Loaded"
		>
	<Window.Style>
		<Style TargetType="Window">
			<Style.Triggers>
				<DataTrigger Value="{x:Static local:SavedFolderType.HISTORY}" Binding="{Binding ElementName=SavedFolderWin, Path=SavedFolderType}">
					<Setter Property="Icon">
						<Setter.Value>
							<DrawingImage>
								<DrawingImage.Drawing>
									<GeometryDrawing Geometry="{StaticResource Icon.Rect}">
										<GeometryDrawing.Brush>
											<DrawingBrush>
												<DrawingBrush.Drawing>
													<GeometryDrawing
															Brush="{StaticResource Path.History.Fill}"
															Geometry="{StaticResource Icon.Svg.History}"
															/>
												</DrawingBrush.Drawing>
											</DrawingBrush>
										</GeometryDrawing.Brush>
									</GeometryDrawing>
								</DrawingImage.Drawing>
							</DrawingImage>
						</Setter.Value>
					</Setter>
				</DataTrigger>
				<DataTrigger Value="{x:Static local:SavedFolderType.FAVORITES}" Binding="{Binding ElementName=SavedFolderWin, Path=SavedFolderType}">
					<Setter Property="Icon">
						<Setter.Value>
							<DrawingImage>
								<DrawingImage.Drawing>
									<GeometryDrawing Geometry="{StaticResource Icon.Rect}">
										<GeometryDrawing.Brush>
											<DrawingBrush>
												<DrawingBrush.Drawing>
													<GeometryDrawing
															Brush="{StaticResource Path.Favorite.Fill2}"
															Geometry="{StaticResource Icon.Svg.Favorite}"
															/>
												</DrawingBrush.Drawing>
											</DrawingBrush>
										</GeometryDrawing.Brush>
									</GeometryDrawing>
								</DrawingImage.Drawing>
							</DrawingImage>
						</Setter.Value>
					</Setter>
				</DataTrigger>
			</Style.Triggers>
		</Style>

	</Window.Style>

	<Window.Resources>

		<ResourceDictionary>

			<!-- <local:IconConverter x:Key="icv" /> -->
			<local:IconNameConverter x:Key="incv" />
			<local:InnerWidthConverter x:Key="iwc" />
			<local:StringEqualToBoolConverter x:Key="StrEqCv" />
			<local:IntGreaterThanConverter x:Key="IntGtCv" />

			<SolidColorBrush x:Key="GrayLight">#CCCCCC</SolidColorBrush>

			<sys:Double x:Key="Height.Bottom.Row">80</sys:Double>
			<sys:Double x:Key="Icon.Height">30</sys:Double>
			<sys:Double x:Key="Icon.Width">30</sys:Double>

			<Style x:Key="control"
					TargetType="ContentControl"
					>
				<Setter Property="Foreground" Value="White" />
				<Setter Property="HorizontalAlignment" Value="Left" />
				<Setter Property="HorizontalContentAlignment" Value="Left" />
				<Setter Property="Margin" Value="0" />
				<Setter Property="Padding" Value="0" />
				<Setter Property="VerticalAlignment" Value="Center" />
				<Setter Property="VerticalContentAlignment" Value="Center" />
			</Style>

			<Style x:Key="Label"
					TargetType="Label"
					BasedOn="{StaticResource Label.Style.Standard}"
					>
				<Setter Property="Margin" Value="0" />
				<Setter Property="Padding" Value="0" />
			</Style>

			<Style x:Key="Label.Foreground.Black"
					TargetType="Label"
					BasedOn="{StaticResource Label}"
					>
				<Setter Property="Foreground" Value="Black" />
			</Style>

			<Style x:Key="Label.Button.StackedText"
					TargetType="Label"
					BasedOn="{StaticResource Label.Foreground.Black}"
					>
				<Setter Property="FontSize" Value="12" />
				<Setter Property="Margin" Value="0,-4,0,0" />
				<Setter Property="HorizontalContentAlignment" Value="Center" />
			</Style>

			<Style x:Key="Label.Foreground.White"
					TargetType="Label"
					BasedOn="{StaticResource Label}"
					>
				<Setter Property="Foreground" Value="White" />
				<Setter Property="Padding" Value="0,0,0,3" />
			</Style>


			<Style x:Key="label.Width.Auto"
					TargetType="Label"
					BasedOn="{StaticResource Label.Foreground.White}"
					>
				<Setter Property="Width" Value="Auto" />

			</Style>

			<Style x:Key="label.DateTime"
					TargetType="Label"
					BasedOn="{StaticResource Label}"
					>
				<Setter Property="Foreground" Value="{StaticResource GrayLight}" />
				<Setter Property="FontSize" Value="10.5" />
				<Setter Property="Padding" Value="2,0,0,0">
				</Setter>
			</Style>


			<Style x:Key="TextBoxBase"
					TargetType="TextBox"
					>
				<Setter Property="Background" Value="#222222" />
				<Setter Property="Foreground" Value="White" />
				<Setter Property="HorizontalAlignment" Value="Stretch" />

				<Setter Property="Padding" Value="0" />
			</Style>

			<Style x:Key="TextBox.Edit"
					TargetType="TextBox"
					BasedOn="{StaticResource TextBoxBase}"
					>
				<Setter Property="Margin" Value="0,1,0,.5" />
			</Style>

			<Style x:Key="TextBlock.Path"
					TargetType="TextBlock"
					>
				<Setter Property="Padding" Value="0,3,0,0" />
				<Setter Property="Foreground" Value="{StaticResource GrayLight}" />
				<Setter Property="FontSize" Value="10" />
				<Setter Property="HorizontalAlignment" Value="Left" />
				<Setter Property="TextAlignment" Value="Right" />
			</Style>

			<Style x:Key="Button.Style.Std.Left.0"
					TargetType="Button"
					BasedOn="{StaticResource Button.Style.Standard.Left}"
			>
				<Setter Property="Height" Value="28"/>
				<Setter Property="Width" Value="65"/>
			</Style>

			<Style x:Key="Button.Style.Std.Left.A"
					TargetType="Button"
					BasedOn="{StaticResource Button.Style.Std.Left.0}"
					>
				<Setter Property="Visibility" Value="Visible" />
				<Setter Property="IsEnabled" Value="True"/>
				<Style.Triggers>
					<DataTrigger Value="{x:Static local:SavedFolderType.HISTORY}" Binding="{Binding Path=SavedFolderType}">
						<Setter Property="Visibility" Value="Collapsed">
						</Setter>
					</DataTrigger>
					<DataTrigger Value="{x:Static local:SavedFolderOperation.GET_CURRENT}" Binding="{Binding Path=SavedFolderOperation}">
						<Setter Property="Visibility" Value="Collapsed">
						</Setter>
					</DataTrigger>
					<DataTrigger Value="{x:Static local:SavedFolderOperation.GET_REVISION}" Binding="{Binding Path=SavedFolderType}">
						<Setter Property="Visibility" Value="Collapsed">
						</Setter>
					</DataTrigger>

				</Style.Triggers>
			</Style>


			<Style x:Key="Button.Style.Std.Left.A1"
					TargetType="Button"
					BasedOn="{StaticResource Button.Style.Std.Left.A}"
					>
				<Style.Triggers>
					<DataTrigger Value="{x:Null}" Binding="{Binding SelectedFolderProject}">
						<Setter Property="IsEnabled" Value="False">
						</Setter>
					</DataTrigger>
				</Style.Triggers>
			</Style>


			<Style x:Key="Button.Style.Std.Left.A1A"
					TargetType="Button"
					BasedOn="{StaticResource Button.Style.Std.Left.A1}"
					>
				<Style.Triggers>
					<DataTrigger Value="{x:Static local:FolderProjectOp.ADD_PROJECT}" Binding="{Binding FolderProjectOp}">
						<Setter Property="IsEnabled" Value="False" />
					</DataTrigger>
				</Style.Triggers>
			</Style>

			<Style x:Key="Button.Style.Std.Left.A1A1"
					TargetType="Button"
					BasedOn="{StaticResource Button.Style.Std.Left.A1A}"
					>
				<Style.Triggers>
					<DataTrigger Value="{x:Null}" Binding="{Binding SelectedFolderPair}">
						<Setter Property="IsEnabled" Value="False" />
					</DataTrigger>
				</Style.Triggers>
			</Style>



			<Style x:Key="Button.Style.Std.Left.B"
					TargetType="Button"
					BasedOn="{StaticResource Button.Style.Standard.Left}"
					>
				<Setter Property="Visibility" Value="Collapsed" />
				<Setter Property="IsEnabled" Value="false">
				</Setter>
				<Style.Triggers>
					<DataTrigger Value="{x:Static local:FolderProjectOp.ADD_PROJECT}" Binding="{Binding Path=FolderProjectOp}">
						<Setter Property="Visibility" Value="Visible">
						</Setter>
					</DataTrigger>
				</Style.Triggers>
			</Style>


			<Style x:Key="Button.Style.Std.Left.C"
					TargetType="Button"
					BasedOn="{StaticResource Button.Style.Std.Left.0}"
					>
				<Setter Property="Visibility" Value="Visible" />
				<Setter Property="IsEnabled" Value="True">
				</Setter>
				<Style.Triggers>
					<DataTrigger Value="{x:Static local:SavedFolderType.FAVORITES}" Binding="{Binding Path=SavedFolderType}">
						<Setter Property="Visibility" Value="Collapsed">
						</Setter>
					</DataTrigger>
				</Style.Triggers>
			</Style>


			<Style x:Key="Button.Style.Std.Left.C1"
					TargetType="Button"
					BasedOn="{StaticResource Button.Style.Std.Left.C}"
					>
				<Style.Triggers>
					<DataTrigger Value="{x:Null}" Binding="{Binding SelectedFolderProject}">
						<Setter Property="IsEnabled" Value="False">
						</Setter>
					</DataTrigger>
				</Style.Triggers>
			</Style>


			<Style x:Key="Button.Style.Std.Right.A"
					TargetType="Button"
					BasedOn="{StaticResource Button.Style.Standard.Right}"
					>
				<Setter Property="Visibility" Value="Visible" />
				<Setter Property="IsEnabled" Value="True">
				</Setter>
				<Style.Triggers>
					<DataTrigger Value="{x:Static local:FolderProjectOp.ADD_PROJECT}" Binding="{Binding Path=FolderProjectOp}">
						<Setter Property="IsEnabled" Value="false">
						</Setter>
					</DataTrigger>
				</Style.Triggers>
			</Style>


			<Style x:Key="Button.Icon"
					TargetType="Button"
					>
				<Setter Property="Background" Value="Transparent" />
				<Setter Property="BorderBrush" Value="White" />
				<Setter Property="BorderThickness" Value="1" />
				<Setter Property="HorizontalContentAlignment" Value="Center" />
				<Setter Property="Margin" Value="0" />
				<Setter Property="Padding" Value="0" />
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate x:Name="CT"
								TargetType="Button"
								>
							<Border x:Name="BDR"
									Padding="3"
									Background="Transparent"
									BorderThickness="2"
									BorderBrush="#666666"
									CornerRadius="3"
									>
								<ContentPresenter x:Name="contentPresenter"
										Content="{TemplateBinding Content}"
										Margin="{TemplateBinding Padding}"
										Width="{StaticResource Icon.Width}"
										Height="{StaticResource Icon.Height}"
										HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
										VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
										ContentTemplate="{TemplateBinding ContentTemplate}"
										/>
							</Border>
							<ControlTemplate.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter TargetName="BDR" Property="BorderBrush" Value="#FFFFA500" />
								</Trigger>

							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
				<Setter Property="VerticalAlignment" Value="Top" />
			</Style>


			<ControlTemplate x:Key="DuplicateNameValidationTemplate">
				<DockPanel>
					<TextBox
							Width="10"
							FontSize="12"
							FontWeight="Bold"
							Foreground="Red"
							Text="!"
							ToolTip="Duplicate Name Entered.  Please provide a Unique Name"
							/>
					<Border
							BorderThickness="1"
							BorderBrush="Red"
							>
						<AdornedElementPlaceholder />
					</Border>
				</DockPanel>

			</ControlTemplate>

			<ControlTemplate x:Key="Button.Icon.ControlTemplate"
					TargetType="{x:Type ButtonBase}"
					>
				<Border x:Name="border"
						Background="Transparent"
						BorderThickness="1"
						BorderBrush="Transparent"
						CornerRadius="3"
						Opacity="1.0"
						SnapsToDevicePixels="True"
						>
					<!--  BorderThickness="{TemplateBinding BorderThickness}"  -->
					<!--  BorderBrush="Transparent"  -->
					<ContentPresenter x:Name="contentPresenter"
							Content="{TemplateBinding Content}"
							Margin="{TemplateBinding Padding}"
							Width="{StaticResource Icon.Width}"
							Height="{StaticResource Icon.Height}"
							HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
							VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
							ContentStringFormat="{TemplateBinding ContentStringFormat}"
							Focusable="False"
							RecognizesAccessKey="True"
							SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
							ContentTemplate="{TemplateBinding ContentTemplate}"
							/>
				</Border>
				<ControlTemplate.Triggers>
					<!-- <Trigger Property="Button.IsDefaulted" Value="True"> -->
					<!-- 	<Setter TargetName="border" Property="BorderBrush" Value="#ff00ff00" /> -->
					<!-- </Trigger> -->
					<Trigger Property="IsMouseOver" Value="True">
						<!-- <Setter TargetName="border" Property="Background" Value="#FFBEE6FD" /> -->
						<!-- <Setter TargetName="border" Property="BorderBrush" Value="#FF3C7FB1" /> -->
						<Setter TargetName="border" Property="BorderBrush" Value="#FFFFFF00" />
					</Trigger>
					<Trigger Property="IsPressed" Value="True">
						<!-- <Setter TargetName="border" Property="Background" Value="#FFC4E5F6" /> -->
						<Setter TargetName="border" Property="BorderBrush" Value="#FFFFA500" />
					</Trigger>
					<Trigger Property="ToggleButton.IsChecked" Value="True">
						<!-- <Setter TargetName="border" Property="Background" Value="#FFBCDDEE" /> -->
						<Setter TargetName="border" Property="BorderBrush" Value="#FF00FF00" />
					</Trigger>
					<Trigger Property="IsEnabled" Value="False">
						<!-- <Setter Property="Foreground" Value="#FF838383" /> -->
						<!-- <Setter TargetName="border" Property="Background" Value="#FFF4F4F4" /> -->
						<Setter TargetName="border" Property="Opacity" Value="0.5" />
						<!-- <Setter TargetName="border" Property="BorderBrush" Value="#FFADB2B5" /> -->
					</Trigger>
				</ControlTemplate.Triggers>
			</ControlTemplate>

			<ControlTemplate x:Key="ProjectIcon"
					TargetType="ContentControl"
					>
				<CheckBox x:Name="ProjectIconButton"
						Margin="2"
						Padding="3"
						HorizontalContentAlignment="Center"
						Background="Transparent"
						BorderThickness="1"
						BorderBrush="Transparent"
						IsChecked="False"
						Tag="{TemplateBinding Tag}"
						Template="{StaticResource Button.Icon.ControlTemplate}"
						Click="ProjectFolderIconButton_OnClick"
						>
					<CheckBox.Content>
						<Viewbox>
							<ContentPresenter />
						</Viewbox>
					</CheckBox.Content>
				</CheckBox>

				<!-- </Border> -->
				<ControlTemplate.Triggers>
					<DataTrigger Value="true">
						<DataTrigger.Binding>
							<MultiBinding
									Converter="{StaticResource StrEqCv}"
									Mode="OneWay"
									>
								<Binding
										ElementName="SavedFolderWin"
										Mode="OneWay"
										Path="ProjectFolderIconIndex"
										/>
								<Binding
										Mode="OneWay"
										Path="Tag"
										RelativeSource="{RelativeSource Self}"
										/>

							</MultiBinding>
						</DataTrigger.Binding>
						<!-- <Setter TargetName="BDR" Property="BorderBrush" Value="red" /> -->
						<Setter TargetName="ProjectIconButton" Property="IsChecked" Value="True" />
					</DataTrigger>
				</ControlTemplate.Triggers>
			</ControlTemplate>

			<ControlTemplate x:Key="PairIcon"
					TargetType="ContentControl"
					>
				<CheckBox x:Name="PairIconButton"
						Margin="2"
						Padding="3"
						HorizontalContentAlignment="Center"
						Background="Transparent"
						BorderThickness="1"
						BorderBrush="Transparent"
						IsChecked="False"
						Tag="{TemplateBinding Tag}"
						Template="{StaticResource Button.Icon.ControlTemplate}"
						Click="FolderPairIconButton_OnClick"
						>
					<CheckBox.Content>
						<Viewbox>
							<ContentPresenter />
						</Viewbox>
					</CheckBox.Content>
				</CheckBox>

				<!-- </Border> -->
				<ControlTemplate.Triggers>
					<DataTrigger Value="true">
						<DataTrigger.Binding>
							<MultiBinding
									Converter="{StaticResource StrEqCv}"
									Mode="OneWay"
									>
								<Binding
										ElementName="SavedFolderWin"
										Mode="OneWay"
										Path="FolderPairIndex"
										/>
								<Binding
										Mode="OneWay"
										Path="Tag"
										RelativeSource="{RelativeSource Self}"
										/>

							</MultiBinding>
						</DataTrigger.Binding>
						<!-- <Setter TargetName="BDR" Property="BorderBrush" Value="red" /> -->
						<Setter TargetName="PairIconButton" Property="IsChecked" Value="True" />
					</DataTrigger>
				</ControlTemplate.Triggers>
			</ControlTemplate>


		</ResourceDictionary>
	</Window.Resources>

	<Grid
			Margin="5,5,5,0"
			>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="3*" MinWidth="240" />
			<ColumnDefinition Width="4*" />
			<ColumnDefinition Width="6*" MinWidth="260" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
			<RowDefinition Height="Auto" MinHeight="40" MaxHeight="{StaticResource Height.Bottom.Row}" />
		</Grid.RowDefinitions>
		
		<Label
				Content="{Binding ElementName=SavedFolderWin, Path=WinTitle, Mode=OneWay, FallbackValue='Favorites'}"
				Grid.Column="0"
				Grid.Row="0"
				Grid.ColumnSpan="3"
				Margin="0,0,0,4"
				Padding="3,0,0,0"
				HorizontalAlignment="Stretch"
				FontSize="{StaticResource Header.Title.L1.Font.Size}"
				Background="{StaticResource Win.Title.Background}"
				Style="{StaticResource control}"
				/>


		<StackPanel
				Grid.Column="0"
				Grid.Row="2"
				Margin="0,5,0,0"
				HorizontalAlignment="Left"
				VerticalAlignment="Bottom"
				DataContext="{Binding ElementName=SavedFolderWin}"
				Orientation="Horizontal"
				>


			<Button Name="btnAddProject"
					HorizontalAlignment="Right"
					FontSize="11"
					Margin="8,0,0,5"
					Click="BtnAddFolderProject_OnClick"
					>
				<Button.Content>
					<StackPanel Orientation="Vertical">
						<Label
								Content="Add a"

								Style="{StaticResource Label.Button.StackedText}"
								/>
						<Label
								Content="Project"

								Style="{StaticResource Label.Button.StackedText}"
								/>
					</StackPanel>
				</Button.Content>
				<Button.Style>
					<Style
							TargetType="Button"
							BasedOn="{StaticResource Button.Style.Std.Left.A}"
							>
						<!-- 	<Setter Property="IsEnabled" Value="True" /> -->
						<!-- 	<Style.Triggers> -->
						<!--  <DataTrigger  -->
						<!--  Binding="{Binding Path=FolderProjectOp,  -->
						<!--  FallbackValue={x:Static local:FolderProjectOp.ADD_PROJECT}}"  -->
						<!--  Value="{x:Static local:FolderProjectOp.ADD_PROJECT}"  -->
						<!--  >  -->
						<!-- 			<Setter Property="IsEnabled" Value="False"> -->
						<!-- 			</Setter> -->
						<!-- 		</DataTrigger> -->
						<!--  <DataTrigger  -->
						<!--  Binding="{Binding SavedFolderOperation}"  -->
						<!--  Value="{x:Static local:SavedFolderOperation.GET_CURRENT}"  -->
						<!--  >  -->
						<!-- 			<Setter Property="IsEnabled" Value="False" /> -->
						<!-- 		</DataTrigger> -->
						<!--  <DataTrigger  -->
						<!--  Binding="{Binding SavedFolderOperation}"  -->
						<!--  Value="{x:Static local:SavedFolderOperation.GET_REVISION}"  -->
						<!--  >  -->
						<!-- 			<Setter Property="IsEnabled" Value="False" /> -->
						<!-- 		</DataTrigger> -->
						<!-- 	</Style.Triggers> -->
					</Style>
				</Button.Style>
			</Button>

			<Button Name="btnDeleteProject"
					HorizontalAlignment="Right"
					Click="BtnDeleteFolderProject_OnClick"
					>
				<!--  Style="{StaticResource Button.Style.Standard.Left}"  -->
				<Button.Content>
					<StackPanel Orientation="Vertical">
						<Label
								Content="Delete a"
								Style="{StaticResource Label.Button.StackedText}"
								/>
						<Label
								Content="Project"
								Style="{StaticResource Label.Button.StackedText}"
								/>
					</StackPanel>
				</Button.Content>
				<Button.Style>
					<Style
							TargetType="Button"
							BasedOn="{StaticResource Button.Style.Std.Left.A1}"
							>
						<Style.Triggers>
							<DataTrigger Value="{x:Static local:FolderProjectOp.ADD_PROJECT}" Binding="{Binding Path=FolderProjectOp}">
								<Setter Property="Visibility" Value="Collapsed" />
							</DataTrigger>

						</Style.Triggers>
					</Style>
				</Button.Style>
			</Button>

			<Button Name="BtnSaveNewProject"
					HorizontalAlignment="Right"
					Click="BtnBtnSaveNewProject_OnClick"
					>
				<!--  Style="{StaticResource Button.Style.Standard.Left}"  -->
				<Button.Content>
					<StackPanel Orientation="Vertical">
						<Label
								Content="Save"
								Style="{StaticResource Label.Button.StackedText}"
								/>
						<Label
								Content="Project"
								Style="{StaticResource Label.Button.StackedText}"
								/>
					</StackPanel>
				</Button.Content>
				<Button.Style>
					<Style
							TargetType="Button"
							BasedOn="{StaticResource Button.Style.Std.Left.B}"
							>
						<Setter Property="IsEnabled" Value="{Binding CanSave}" />
						<!-- <Setter Property="Visibility" Value="Collapsed" /> -->
						<!-- <Style.Triggers> -->
						<!--  <DataTrigger  -->
						<!--  Binding="{Binding Path=}}"  -->
						<!--  Value="{x:Static local:FolderProjectOp.NONE}"  -->
						<!--  >  -->
						<!-- 		<Setter Property="Visibility" Value="Visible" /> -->
						<!-- 	</DataTrigger> -->
						<!-- </Style.Triggers> -->
					</Style>
				</Button.Style>
			</Button>

			<Button Name="BtnCancelAddeNewProject"
					HorizontalAlignment="Right"
					Click="BtnCancelAddeNewProject_OnClick"
					>
				<!--  Style="{StaticResource Button.Style.Standard.Left}"  -->
				<Button.Content>
					<StackPanel Orientation="Vertical">
						<Label
								Content="Cancel"
								Style="{StaticResource Label.Button.StackedText}"
								/>
					</StackPanel>
				</Button.Content>
				<Button.Style>
					<Style
							TargetType="Button"
							BasedOn="{StaticResource Button.Style.Std.Left.B}"
							>
						<!-- <Setter Property="Visibility" Value="Collapsed" /> -->
						<Style.Triggers>
							<DataTrigger Value="{x:Static local:FolderProjectOp.ADD_PROJECT}" Binding="{Binding Path=FolderProjectOp}">
								<Setter Property="IsEnabled" Value="True">
								</Setter>
							</DataTrigger>
						</Style.Triggers>
					</Style>
				</Button.Style>
			</Button>

			<Button Name="BtnAddToFavorites"
					HorizontalAlignment="Right"
					Click="BtnAddToFavorites_OnClick"
					>
