<Window
		x:Class="Sylvester.SavedFolders.SavedFoldersWin"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:generic="clr-namespace:System.Collections.Generic;assembly=mscorlib"
		xmlns:local="clr-namespace:Sylvester.SavedFolders"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:settings="clr-namespace:Sylvester.Settings"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
		x:Name="SavedFolderWin"
		Title="SavedFoldersWin"
		Width="800"
		Height="450"
		mc:Ignorable="d"
		Background="#333333"
		>
	<Window.Resources>

		<Style
				x:Key="label"
				TargetType="Label"
				>
			<Setter Property="Width" Value="100" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="Margin" Value="0" />
			<Setter Property="Padding" Value="0" />
		</Style>


	</Window.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200" />
			<ColumnDefinition />
			<ColumnDefinition Width="100" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="40" />
		</Grid.RowDefinitions>

		<StackPanel
				Grid.Column="1"
				Grid.Row="2"
				Grid.ColumnSpan="2"
				Margin="0,0,-0.4,0"
				Width="212"
				HorizontalAlignment="Right"
				Orientation="Horizontal"
				>

			<Button
					Name="btnTest"
					Content="Test"
					Margin="5,10,5,5"
					Width="60"
					HorizontalAlignment="Right"
					Background="#555555"
					Foreground="White"
					Click="BtnTest_OnClick"
					/>

			<Button
					Name="btnDebug"
					Content="Debug"
					Margin="5,10,5,5"
					Width="60"
					HorizontalAlignment="Right"
					Background="#555555"
					Foreground="White"
					Click="BtnDebug_OnClick"
					/>

			<Button
					Name="btnDone"
					Content="Done"
					Margin="5,10,5,5"
					Width="60"
					Background="#555555"
					Foreground="White"
					Click="BtnDone_OnClick"
					/>


		</StackPanel>


		<StackPanel
				Grid.Column="1"
				Grid.Row="0"
				Grid.ColumnSpan="2"
				Orientation="Vertical"
				Margin="5,10,5,5"
				>

			<DockPanel
					HorizontalAlignment="Left"

					>
				<Label
						Content="Project info"
						DockPanel.Dock="Left"
						Style="{StaticResource label}"
						/>
				<Label
						Content="Id"
						Width="30"
						DockPanel.Dock="Left"
						Style="{StaticResource label}"
						/>
				<Label
						Content="{Binding SavedFolders.Values/Identifier.Volume,
															ElementName=SavedFolderWin}"
						Width="30"
						DockPanel.Dock="Left"
						Style="{StaticResource label}"
						/>
				<Label
						Content="{Binding SavedFolders.Values/Identifier.RootFolder,
															ElementName=SavedFolderWin}"
						Width="30"
						DockPanel.Dock="Left"
						Style="{StaticResource label}"
						/>


			</DockPanel>




			<DockPanel>
				<Label
						Content="Current Folder"
						Style="{StaticResource label}"
						/>

				<TextBox
						Margin="0,1,0,.5"
						Padding="0"
						Text="{Binding ElementName=SavedFolderWin,
													 Path=CurrentPath,
													 Mode=TwoWay,
													 FallbackValue=current path}"
						Background="#222222"
						Foreground="White"
						/>

			</DockPanel>

			<DockPanel>
				<Label
						Content="Revision Folder"
						Style="{StaticResource label}"
						/>

				<TextBox
						Margin="0,1,0,.5"
						Padding="0"
						Text="{Binding ElementName=SavedFolderWin,
													 Path=RevisionPath,
													 Mode=TwoWay,
													 FallbackValue=revision path}"
						Background="#222222"
						Foreground="White"
						/>
			</DockPanel>
		</StackPanel>


		<TextBox
				x:Name="tbxMain"
				Grid.Column="1"
				Grid.Row="1"
				Grid.ColumnSpan="2"
				Margin="11,10,9.6,0"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				FontFamily="DejaVu Sans Mono"
				FontSize="14"
				HorizontalScrollBarVisibility="Visible"
				Text="TextBox"
				TextWrapping="Wrap"
				VerticalScrollBarVisibility="Visible"
				Background="Transparent"
				Foreground="White"
				/>

		<ListView
				x:Name="lvProjects"
				Grid.Column="0"
				Grid.Row="0"
				DataContext="{Binding ElementName=SavedFolderWin,
															Path=SavedFolders}"
				SelectedValue="{Binding ElementName=SavedFolderWin,
																Path=SelectedSavedProject}"
				SelectionMode="Single"
				Background="#333333"
				ItemTemplate="{DynamicResource DataTemplate1}"
				ItemsSource="{Binding}"
				>
			<!--  ItemsSource="{Binding SavedFolders}"  -->
			<ListView.Resources>
				<DataTemplate
						x:Key="DataTemplate1"
						DataType="{x:Type settings:SavedProject}"
						>
					<StackPanel Orientation="Horizontal">
						<Label
								Content="{Binding Name,
																	FallbackValue=name}"
								Foreground="White"
								/>
					</StackPanel>
				</DataTemplate>
			</ListView.Resources>
		</ListView>

		<ListView
				x:Name="lvFolders"
				Grid.Column="0"
				Grid.Row="1"
				DataContext="{Binding ElementName=SavedFolderWin,
															Path=FolderPairs}"
				SelectedValue="{Binding ElementName=SavedFolderWin,
																Path=SelectedFolderPair}"
				SelectionMode="Single"
				Background="#333333"
				ItemTemplate="{DynamicResource DataTemplate2}"
				ItemsSource="{Binding}"
				>
			<!--  ItemsSource="{Binding SavedFolders}"  -->
			<ListView.Resources>
				<DataTemplate
						x:Key="DataTemplate2"
						DataType="{x:Type settings:SavedFolderPair}"
						>
					<StackPanel Orientation="Horizontal">
						<Label
								Content="{Binding Key,
																	FallbackValue=name}"
								Foreground="White"
								/>
					</StackPanel>
				</DataTemplate>
			</ListView.Resources>
		</ListView>

	</Grid>
</Window>
