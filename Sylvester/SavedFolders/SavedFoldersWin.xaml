<Window x:Class="Sylvester.SavedFolders.SavedFoldersWin"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:local="clr-namespace:Sylvester.SavedFolders"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				Title="SavedFoldersWin"
				Width="800"
				Height="450"
				mc:Ignorable="d"
				x:Name="SavedFolderWin"
				Background="#333333">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200" />
			<ColumnDefinition />
			<ColumnDefinition Width="100" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="40" />
		</Grid.RowDefinitions>

		<StackPanel Grid.Column="1"
								Grid.Row="1"
								Grid.ColumnSpan="2"
								HorizontalAlignment="Right"
								Orientation="Horizontal"
								Margin="0,0,-0.4,0"
								Width="212">

			<Button Name="btnTest"
							Content="Test"
							Margin="5,10,5,5"
							Width="60"
							HorizontalAlignment="Right"
							Background="#555555"
							Foreground="White"
							Click="BtnTest_OnClick" />

			<Button Name="btnDebug"
							Content="Debug"
							Margin="5,10,5,5"
							Width="60"
							HorizontalAlignment="Right"
							Background="#555555"
							Foreground="White"
							Click="BtnDebug_OnClick" />

			<Button Name="btnDone"
							Content="Done"
							Margin="5,10,5,5"
							Width="60"
							Background="#555555"
							Foreground="White"
							Click="BtnDone_OnClick" />


		</StackPanel>

		<TextBox x:Name="tbxMain"
						 Grid.Column="1"
						 Grid.Row="0"
						 Grid.ColumnSpan="2"
						 Margin="11,10,9.6,0"
						 HorizontalAlignment="Stretch"
						 VerticalAlignment="Stretch"
						 FontFamily="DejaVu Sans Mono"
						 FontSize="14"
						 HorizontalScrollBarVisibility="Visible"
						 Text="TextBox"
						 TextWrapping="Wrap"
						 VerticalScrollBarVisibility="Visible"
						 Background="Transparent"
						 Foreground="White" />

		<ListView
				Background="#444444"
				DataContext="{Binding ElementName=SavedFolderWin }"
				></ListView>

	</Grid>
</Window>
