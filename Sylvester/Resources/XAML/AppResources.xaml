	<SolidColorBrush x:Key="Button.Static.Background">
		#444444
	</SolidColorBrush>

	<SolidColorBrush x:Key="MouseOver.Foreground">
		White
	</SolidColorBrush>
	<SolidColorBrush x:Key="MouseOver.Border.Background">
		#FF3A779B
	</SolidColorBrush>
	<SolidColorBrush x:Key="MouseOver.Border">
		#FFC7EAFF
	</SolidColorBrush>
	<SolidColorBrush x:Key="Pressed.Border.Background">
		#FFC4E5F6
	</SolidColorBrush>
	<SolidColorBrush x:Key="Pressed.Border">
		#FF2C628B
	</SolidColorBrush>
	<SolidColorBrush x:Key="Disabled.Foreground">
		#FFDDDDDD
	</SolidColorBrush>
	<SolidColorBrush x:Key="Disabled.Border.Background">
		#FF646464
	</SolidColorBrush>
	<SolidColorBrush x:Key="Disabled.Border">
