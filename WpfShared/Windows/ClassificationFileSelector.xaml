						SelectedValue="{Binding ElementName=winClsFileMgr,
																		Path=SearchText}"
						SelectedValuePath="SortName"
						ItemsSource="{Binding View,
																	FallbackValue={x:Null}}"
						Style="{StaticResource Combo.Base}"
						Template="{DynamicResource CbxControlTemplate}"
						>
					<ComboBox.ItemTemplate>
						<DataTemplate DataType="sampleFileSupport:SampleFile">
							<StackPanel Orientation="Horizontal">
								<Label
										Content="{Binding FileName,
																			FallbackValue='FileName',
																			TargetNullValue=''}"
										Width="Auto"
										MinWidth="120"
										Padding="5,1,0,0"
										Foreground="White"
										/>
								<Label
										Content="{Binding FullFilePath,
																			FallbackValue='FilePath'}"
										Padding="5,1,0,0"
										Foreground="White"
										ContentStringFormat="{}({0})"
										/>
							</StackPanel>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>

				<Label
						Content="Description"
						Grid.Column="0"
						Grid.Row="8"
						Style="{StaticResource Label.Selected.Title}"
						/>

				<TextBlock
						Grid.Column="1"
						Grid.Row="8"
						Grid.ColumnSpan="4"
						Height="Auto"
						IsEnabled="{Binding Selected.CanEdit,
																ElementName=winClsFileMgr,
																Mode=OneWay}"
						Text="{Binding SelectedSample.Description,
													 ElementName=winClsFileMgr,
													 FallbackValue='',
													 TargetNullValue='',
													 Mode=OneWay,
													 Converter={StaticResource NullStringToMessage},
													 ConverterParameter=''}"
						TextTrimming="CharacterEllipsis"
						Style="{StaticResource TextBlock.Base}"
						/>


				<DockPanel
						Grid.Column="0"
						Grid.Row="6"
						Grid.ColumnSpan="5"
						Margin="0,0,0,0"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						>

					<Button x:Name="BtnInstallSample2"
							Content="Install"
							Margin="0,3,0,0"
							Width="{StaticResource Normal.Button.Width}"
							VerticalAlignment="Bottom"
							DockPanel.Dock="Top"
							Style="{StaticResource Button.Reduced.Vertically}"
							Template="{StaticResource Button.Normal.ControlTemplate}"
							Click="BtnInstallSample_OnClick"
							/>

				</DockPanel>

			</Grid>
		</DockPanel>
	</Grid>
</Window>
