<Window
		x:Class="WpfShared.Windows.ClassificationFileSelector"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:configSupport="clr-namespace:AndyShared.ConfigSupport"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:local="clr-namespace:WpfShared.Windows"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		Name="winClsFileMgr"
		Title="ClassificationFileSelector"
		Width="500"
		Height="500"
		mc:Ignorable="d"
		Background="{StaticResource Normal.Window.Background}"
		>
	<Window.Resources>

		<!-- <SolidColorBrush x:Key="x" Color="{StaticResource Gray.650}"></SolidColorBrush> -->

			<Style x:Key="Label.Base" TargetType="Label">
				<Setter Property="Padding" Value="0" />
				<Setter Property="VerticalAlignment" Value="Center" />
				<Setter Property="Foreground" Value="{StaticResource Label.Title.Foreground.Subdued}" />
			</Style>


	</Window.Resources>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="85" />
			<RowDefinition Height="50" />
		</Grid.RowDefinitions>


		<DockPanel
				Grid.Column="0"
				Grid.Row="0"
				VerticalAlignment="Stretch"
				>

			<!-- <Label -->
			<!-- 		x:Name="Label10" -->
			<!-- 		Content="{Binding ElementName=clsFileMgr, -->
			<!-- 											Path=ListViewTitle, -->
			<!-- 											FallbackValue='Classification Files'}" -->
			<!-- 		Margin="5,0,5,0" -->
			<!-- 		Padding="5,4,0,6" -->
			<!-- 		HorizontalAlignment="Stretch" -->
			<!-- 		VerticalAlignment="Top" -->
			<!-- 		FontSize="14" -->
			<!-- 		DockPanel.Dock="Top" -->
			<!-- 		Background="{StaticResource Win.Title.Background}" -->
			<!-- 		Foreground="White" -->
			<!-- 		/> -->

			<Label
					x:Name="Label20"
					Content="Select a Classification File to use"
					Margin="5,5,5,0"
					Padding="5,4,0,6"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Top"
					FontSize="14"
					DockPanel.Dock="Top"
					Background="{StaticResource Win.Title.Background}"
					Foreground="White"
					/>

			<ListBox
					x:Name="Lb1"
					Margin="5"
					VerticalAlignment="Stretch"
					DataContext="{Binding ElementName=winClsFileMgr,
																Path=View}"
					DockPanel.Dock="Top"
					SelectedItem="{Binding ElementName=winClsFileMgr,
																 Path=Selected,
																 Mode=TwoWay,
																 FallbackValue={x:Null}}"
					Background="{StaticResource ListView.Background}"
					Foreground="White"
					ItemsSource="{Binding}"
					>
				<ListBox.ItemTemplate>
					<DataTemplate DataType="configSupport:ConfigFileClassificationUser">
						<StackPanel Orientation="Vertical">
							<TextBlock Text="{Binding FileName}" />
							<TextBlock
									Margin="5,0,0,5"
									Text="{Binding DescriptionFromFile}"
									/>
						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>

			</ListBox>
		</DockPanel>
		<DockPanel
				Grid.Column="0"
				Grid.Row="1"
				>
			<Label
					x:Name="Label21"
					Content="Selected Classification File"
					Margin="5,0,5,0"
					Padding="5,4,0,6"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Top"
					DockPanel.Dock="Top"
					Background="{StaticResource Win.Title.Background}"
					Foreground="White"
					/>
			<Grid
					Margin="10,5,5,0"
					DockPanel.Dock="Left"
					>


				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="80" />
					<ColumnDefinition Width="100" />
					<ColumnDefinition Width="70" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>

				<Label
						Content="User Id"
						Grid.Column="0"
						Grid.Row="0" 
						Style="{StaticResource Label.Base}" 
						/>
				<!--  Foreground="{StaticResource Label.Title.Foreground.Subdued}"  -->

				<Label
						Content="{Binding ElementName=winClsFileMgr,
															Path=Selected.UserName,
															FallbackValue='User Id'}"
						Grid.Column="1"
						Grid.Row="0"
						Style="{StaticResource Label.Base}" 
						/>

				<Label
						Content="File Id"
						Grid.Column="2"
						Grid.Row="0"
						Style="{StaticResource Label.Base}" 
						/>

				<Label
						Content="{Binding ElementName=winClsFileMgr,
															Path=Selected.FileId,
															FallbackValue='File Id'}"
						Grid.Column="3"
						Grid.Row="0"
						Foreground="White"
						Style="{StaticResource Label.Base}" 
						/>



				<Label
						Content="Description"
						Grid.Column="0"
						Grid.Row="1"
						Style="{StaticResource Label.Base}" 
						/>
				<Label
						Content="{Binding ElementName=winClsFileMgr,
															Path=Selected.DataDescription,
															FallbackValue='Desc'}"
						Grid.Column="1"
						Grid.Row="1"
						Grid.ColumnSpan="3"
						Padding="0"
						VerticalAlignment="Center"
						Foreground="White"
						/>
			</Grid>
		</DockPanel>

	</Grid>
</Window>
